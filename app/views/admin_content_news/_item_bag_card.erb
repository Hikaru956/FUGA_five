<div class="col">
    <div class="card h-100">

        <a href="<%= url_for(:action=>'content_category', :id=>stream) %>">
            <% leaf = stream.latest_news_article %>
            <% unless leaf.blank? %>
                <% key_photo = key_photo(leaf) %>
                <% unless key_photo.blank? %>
                    <%= image_tag key_photo.clip.url(:thumb), class: "card-img-top" %>
                <% else %>
                    <img class="card-img-top" src="https://placehold.jp/20/cfcfcf/ffffff/320x180.png?text=<%=leaf.publish_from.strftime('%Y-%m-%d')%>">
                <% end %>
            <% else %>
                <img class="card-img-top" src="https://placehold.jp/22/cfcfcf/ffffff/320x180.png?text=No%20Public%20Article%0A">
            <% end %>
        </a>

        <div class="card-body">
            <h5 class="card-title">
                <%= icon_scheme_state(stream) %>
                <%= truncate(model_name(stream), :length=>50) %>
            </h5>
        </div>

        <div class="card-footer">
            <%= (stream.first?)?	raw("◁"):	link_to(raw("◀"), 	:action=>"bag_category_higher", :id=>stream) %>
            <%= stream.position %>
            <%= (stream.last?)? 	raw("▷"): 	link_to(raw("▶"), 	:action=>"bag_category_lower",	:id=>stream) %>
            <span class='float-right'>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modal_edit_<%=stream.content_bag.id%>">
                    <%= edit_icon('編集')%>
                </button>
                <% unless stream.is_public %>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal_delete_<%=stream.content_bag.id%>">
                        <%= trash_icon('削除')%>
                    </button>
                <% else %>
                    <button type='button' class='btn btn-secondary btn-sm' disabled><%= trash_icon('削除')%></button>
                <% end %>
                |
                <a href="<%= url_for(:action=>'content_category', :id=>stream) %>" class="btn btn-sm btn-outline-primary"><%= share_icon('表示')%>&nbsp;表示</a>
            </span>
        </div>
    </div>
</div>


<div class="modal fade" id="modal_edit_<%=stream.content_bag.id%>" tabindex="-1" aria-labelledby="modal_edit_<%=stream.content_bag.id%>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
			<%= form_for stream.content_bag, url: admin_content_news_update_bag_path(id: stream.content_bag.id), method: :patch do |f| -%>
                <div class="modal-header">
                    <h5 class="modal-title">ストリーム編集</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
					 <%= render :partial=>"form_bag", locals:{f: f, item: stream.content_bag}%>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                    <button type="submit" class="btn btn-sm btn-primary"><%= update_icon('更新') %>&nbsp;更新</button>
                </div>
			<% end %>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_delete_<%=stream.content_bag.id%>" tabindex="-1" aria-labelledby="modal_delete_<%=stream.content_bag.id%>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
			<%= form_for stream.content_bag, url: admin_content_news_delete_bag_path(id: stream.content_bag.id), method: :delete do |f| -%>
                <div class="modal-header">
                    <h5 class="modal-title">削除確認</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
					 <p>ストリームを削除します。ストリーム内のすべてのコンテンツも削除されます。よろしいですか？</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                    <button type="submit" class="btn btn-sm btn-danger"><%= trash_icon('削除') %>&nbsp;削除</button>
                </div>
			<% end %>
        </div>
    </div>
</div>
