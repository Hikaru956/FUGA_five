<div class="col">
    <div class="card h-100">
        <a href="<%= url_for(:action=>'show_leaf', :id=>leaf, :page=>@page) %>">
            <% key_photo = key_photo(leaf) %>
            <% unless key_photo.blank? %>
                <%= image_tag key_photo.clip.url(:thumb), class: "card-img-top" %>
            <% else %>
                <img class="card-img-top" src="https://placehold.jp/22/cfcfcf/ffffff/320x240.png?text=No%20Photo%0A">
            <% end %>
        </a>
        <div class="card-body">
            <h5 class="card-title">
                <%= truncate(model_title(leaf), :length=>30) %>
            </h5>
            <p class="card-text">
                <%= leaf_state_6_icons(leaf) %>
                <% unless leaf.description_3.blank? %>
                    <%= h leaf.description_3 %>
                    <br/>
                <% else %>
                    <%= (leaf.description.blank?)? '': h(truncate(html_content_text(leaf).gsub('&nbsp;', ' '), :length=>50)) %>
                    <br/>
                <% end %>
                <small>
                    <% unless leaf.staff.blank? %>
                        <%= model_name(leaf.staff) %>
                    <% end %>
                    @ <%= leaf.publish_from.strftime("%Y-%m-%d") %>
                </small>
            </p>
        </div>
        <div class="card-footer">
            <span class='float-right'>
                <a href="<%= url_for(:action=>'show_leaf', :id=>leaf, :page=>@page) %>" class="btn btn-sm btn-outline-primary">表示&nbsp;<%= link_to_6_icon %></a>
            </span>
        </div>
    </div>
</div>