<div class="modal fade" id="modal_edit_photo_<%=photo.id%>" tabindex="-1" aria-labelledby="modal_edit_photo_<%=photo.id%>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
			<%= form_for photo, url: admin_content_stream_update_photo_path(id: photo.id), method: :patch do |f| %>
                <div class="modal-header">
                    <h5 class="modal-title">キャプション編集</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
					<div class="mb-3 row">
						<label for="name" class="col-sm-4 col-form-label">写真の説明</label>
						<div class="col-sm-8">
							<%= f.text_area :info, {value: photo.info, class: "form-control", placeholder: "説明を入力", :required => false, autofocus: true}  %>
						</div>
					</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-outline-dark" data-bs-dismiss="modal"><%= cancel_icon('キャンセル') %>&nbsp;キャンセル</button>
                    <button type="submit" class="btn btn-sm btn-primary"><%= update_icon('更新') %>&nbsp;更新</button>
                </div>
			<% end %>
        </div>
    </div>
</div>
