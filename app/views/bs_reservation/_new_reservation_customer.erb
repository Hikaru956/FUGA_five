<%= form_tag({:action=>"create_reservation_customer", :id=>@reservation}, {:class=>"form-horizontal well"}) do -%>
	<fieldset class="form-horizontal">
		<legend>新規にお客様を登録して予約に関連付け</legend>
		<%= render :partial=>"form_reservation_customer"%>
		<div class="form-actions">
        	<button type="submit" class="btn btn-small btn-inverse"><i class="icon-plus"></i>&nbsp;&nbsp;登録</button>
			<%= link_to_remote("<i class='icon-arrow-left'></i>&nbsp;キャンセル",
				{:url=>{:action=>"clear_sandbox", :id=>@reservation}}, 
				:class=>"btn btn-small") %>
      	</div>
	</fieldset>
<% end -%>
