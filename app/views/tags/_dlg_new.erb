<div class="modal fade" id="TagNewModal" tabindex="-1" role="dialog" aria-labelledby="TagNewModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <% item = ActsAsTaggableOn::Tag.new %>
    <%= form_for item, url: tags_path, method: :post do |f| %>
      <%= f.hidden_field :shop_id, value: shop.id %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            <%= new_icon %>
            新規<%= tag_title %>
        </h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render partial: 'form',       locals: {f: f, item: item} %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-outline-dark" data-bs-dismiss="modal"><%= cancel_icon('キャンセル') %>&nbsp;キャンセル</button>
          <button type="submit" class="btn btn-sm btn-success"><%= new_icon %>&nbsp;追加</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
