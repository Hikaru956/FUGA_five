<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for(:action=>'index', :wkey=>@website.wsite_hash_key) %>"><i class="icon-home"></i></a>
            </li>
            <li class="active">
                <%= model_title(@seed) %>
            </li>
        </ol>
    </div>
</div>

<% @public_bag =  @seed.public_bags %>
<% unless @public_bag.blank? %>
	<% array = @public_bag.in_groups_of(3, false) %>
	<% for i in 0..(array.size-1) %>
		<% @lines = array[i] %>
		<div class="row text-center">
			<div class="col-lg-4 col-md-6 hero-feature">
			    <%= render :partial=>"bs_renderer/item_news_bag", :locals => {:temp_local => @lines[0]}  if @lines.size>=1 %>
			</div>
			<div class="col-lg-4 col-md-6 hero-feature">
			    <%= render :partial=>"bs_renderer/item_news_bag", :locals => {:temp_local => @lines[1]}  if @lines.size>=2 %>
			</div>
			<div class="col-lg-4 col-md-6 hero-feature">
			    <%= render :partial=>"bs_renderer/item_news_bag", :locals => {:temp_local => @lines[2]}  if @lines.size>=3 %>
			</div>
			
		</div>
	<% end %>
<% else %>
	<p class="muted">情報が登録されていません。</p>
<% end %>
