<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
          <li><a href="<%= url_for(:action=>'index', 												:wkey=>@website.wsite_hash_key) %>"><i class="icon-home"></i></a></li>
		  <% unless @seed.my_type_root_category.has_only_a_public_bag? %>
			<li><a href="<%= url_for(:action=>'gallery_index', :id=>@seed.my_type_root_category,	:wkey=>@website.wsite_hash_key) %>"><%= model_title(@seed.my_type_root_category) %></a></li>
		  <% end %>
		  <% @seed.category_path.each do | category | %>
			  <li><%= link_to category.category_label, :action=>"gallery_list", :id=>category, :wkey=>@website.wsite_hash_key %></li>
		  <% end %>
		  <li class="active"><%=model_name(@seed) %></li>
        </ol>

        <h1 class="page-header"><%= model_name(@seed.my_bag_root_category.content_bag) %>
            <small>
                <%=h @seed.my_bag_root_category.content_bag.description %>
            </small>
        </h1>
		<% unless @seed.content_leafs.blank? %>
			<% @bag_roots = [@seed.my_bag_root_category] %>
			<% unless @bag_roots.blank? %>
				<div class="text-right">
					<%= form_tag({:action=>"gallery_list", :id=>nil, :wkey=>@website.wsite_hash_key}, :class=>"form-horizontal")  do %>
							<div class="controls">
								<label class="control-label" for="wsite_keywords">カテゴリー : </label>
							    <%= tree_select_tag(@bag_roots, 'id', (@seed.blank?)? "": @seed.id)   %> 
								<button type="submit" class="btn btn-mini"><i class="icon-ok"></i>&nbsp;&nbsp;選択</button>
							</div>
					<%end%>  	
				</div>
			<%end%>
		<% end %>
    </div>
</div>

<% sub_categories = @seed.children %>
<% unless  sub_categories.blank? %>
	<div class="row">
	    <% unless sub_categories.blank? %>
	    <% array = sub_categories.in_groups_of(3, false) %>
	    <div class="col-lg-12">
	        <% for i in 0..(array.size-1) %>
	        <% @lines = array[i] %>
	        <div class="col-lg-4 hero-feature">
	            <% if @lines.size>=1 %>
	            <%= render :partial=>"bs_renderer/item_gallery_list_category", :locals => {:temp_local => @lines[0]} %>
	            <% end %>
	        </div>
	        <div class="col-lg-4 hero-feature">
	            <% if @lines.size>=2 %>
	            <%= render :partial=>"bs_renderer/item_gallery_list_category", :locals => {:temp_local => @lines[1]} %>
	            <% end %>
	        </div>
	        <div class="col-lg-4 hero-feature">
	            <% if @lines.size>=3 %>
	            <%= render :partial=>"bs_renderer/item_gallery_list_category", :locals => {:temp_local => @lines[2]} %>
	            <% end %>
	        </div>
	        <% end %>
	    </div>
	    <% end %>
	</div>
	<hr/>
<% end %>

<%
	sons = @seed.sons
	sons << @seed
	items = ContentLeaf.public_leafs
	items = items.where("content_leafs.content_category_id IN (?)", sons).order(position: :desc)
	@leafs = @seed.content_leafs.paginate(:page => params[:page], :per_page=>PER_PAGE)
	@leafs = (@search_tags.blank?)? @leafs.all: @leafs.tagged_with(@search_tags)
%>

<% unless @leafs.blank? %>
	<div class="row">
	    <div class="col-lg-12">
	    	<% @leafs.each do | leaf | %>
		        <div class="col-sm-6 col-lg-6 col-md-6">
		            <%= render :partial=>"bs_renderer/item_gallery_list", :locals => {:temp_local => leaf} %>
		        </div>
			<% end %>	
	    </div>
	</div>
    <div class="row text-center">
        <div class="col-lg-12">
	        <div class="pagination">
				<%= will_paginate(@leafs, :params=> {:action=>'gallery_list', :id=>@seed, :page=>@page, :wkey=>@website.wsite_hash_key }, class: 'pagination', :previous_label=>'&#171;前', :next_label=>'次&#187;') %>
			</div>
		</div>
	</div>	
<% end %>
