<div class="modal fade" id="AttendancesStaffDayOff_<%= target_date%>" tabindex="-1" role="dialog" aria-labelledby="AttendancesStaffDayOff_<%= target_date%>" aria-hidden="true">
  <div class="modal-dialog">
    <%= form_for staff, url: admin_attendance_day_off_path(id: staff.id,target_date: target_date), method: :post do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">スタッフ勤怠管理</h5>
        	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class='alert alert-info'>
		  	<%= target_date %>
            全休に変更します<br/>
            よろしいですか?
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
          <button type="submit" class="btn btn-warning"><i class='fas fa-times'></i>&nbsp;更新</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
