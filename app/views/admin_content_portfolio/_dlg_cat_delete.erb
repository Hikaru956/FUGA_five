<div class="modal fade" id="modal_delete_<%=cat.id%>" tabindex="-1" aria-labelledby="modal_delete_<%=cat.id%>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <%= form_for cat, url: admin_content_stream_content_category_delete_path(id: cat.id), method: :delete do |f| -%>
                <div class="modal-header">
                    <h5 class="modal-title">カテゴリー削除</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        <%= cat.category_label %>を削除します。
                        よろしいですか？
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                    <button type="submit" class="btn btn-sm btn-danger"><%= trash_icon('削除') %>&nbsp;削除</button>
                </div>
            <% end %>
        </div>
    </div>
</div>
