  <li><%= link_to model_name(@shop.company), 	:controller=>"dashboard", :action=>"company_show", :id=>@shop.company %>&nbsp;<span class="divider">/</span></li>
  <li class="active"><%= model_name(@shop) %></li>
</ul>

