<div class="control-group">
	<label class="control-label" for="password">パスワード</label>
	<div class="controls">
		<%= password_field 'user', 'password', :autocomplete => "off" %>
		<span class="help-block">6文字以上</span>
	</div>
</div>
<div class="control-group">
	<label class="control-label" for="password_confirmation">パスワード（確認）</label>
	<div class="controls">
		<%= password_field 'user', 'password_confirmation', :autocomplete => "off" %>
	</div>
</div>
