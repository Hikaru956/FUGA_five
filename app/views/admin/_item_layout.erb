<div class="card" xstyle="width: 18rem;">
	<% key_photo = temp_local.photo %>
	<% unless key_photo.blank? %>
		<%= image_tag key_photo.clip.url(:thumb) %>
	<% else %>
		<img src="https://placehold.jp/22/cfcfcf/ffffff/320x240.png?text=No%20Photo%0A">
	<% end %>
	<div class="card-body">
		<h5 class="card-title">
        	<%= icon_scheme_state(temp_local) %>
        	<%= truncate(model_name(temp_local), :length=>50) %>
		</h5>
		<p class="card-text"><%= h truncate(temp_local.description, :length=>20) %></p>
	</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item">An item</li>
		<li class="list-group-item">A second item</li>
	</ul>
	<div class="card-body">
		<% if temp_local.position==1 %>
			<span class="float-right"><i class='fa-solid fa-spinner fa-spin'></i></span>
		<% end %>
		<%= (temp_local.first?)?	raw("◁"):	link_to(raw("◀"), 	:action=>"layout_higher", :id=>temp_local) %>
		<%= temp_local.position %>
		<%= (temp_local.last?)? 	raw("▷"): 	link_to(raw("▶"), 	:action=>"layout_lower",	:id=>temp_local) %>
		<span class='float-right'>
			<a href="<%= url_for(:action=>'layout_show', :id=>temp_local) %>" class="btn btn-sm  btn-primary"><%= share_icon('表示')%>&nbsp;表示</a>
		</span>
	</div>
</div>

<% if false %>
<div class="thumbnail">
	<div class="caption">
		<% if temp_local.position==1 %>
			<span class="pull-right"><i class="icon-spinner icon-spin icon-large"></i></span>
		<% end %>
		<p class="wewll" style="text-align:center;">
			<%= (temp_local.first?)?	raw("<i class='fa-solid fa-backward-fast'></i>"):	link_to(raw("<i class='fa-solid fa-backward-fast'></i>"), :action=>"layout_higher",	:id=>temp_local) %>
			<%= temp_local.position %>
			<%= (temp_local.last?)? 	raw("<i class='fa-solid fa-forward-fast'></i>"): 	link_to(raw("<i class='fa-solid fa-forward-fast'></i>"), 	:action=>"layout_lower",	:id=>temp_local) %>				
		</p>
	</div>
	<div  style="text-align:center;">
		<a href="<%= url_for(:action=>'layout_show', :id=>temp_local) %>">
			<% key_photo = temp_local.photo %>
			<% unless key_photo.blank? %>
				<%= image_tag key_photo.clip.url(:thumb) %>
			<% else %>
				<img src="https://placehold.jp/22/cfcfcf/ffffff/320x240.png?text=No%20Photo%0A">
	    	<% end %>
		</a>
	</div>
    <div class="caption">
        <h4>
        	<% unless temp_local.wsite_layout_deploys.blank? %>
		    	<span class="pull-right"><span class="badge badge-success"><%= temp_local.wsite_layout_deploys.size%></span></span>
			<% end %>
        	<%= icon_scheme_state(temp_local) %>
        	<%= truncate(model_name(temp_local), :length=>50) %>
		</h4>
		<p><%= h truncate(temp_local.description, :length=>20) %></p>
    </div>
</div>
<% end %>
