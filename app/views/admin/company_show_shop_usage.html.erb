<!-- === Masthead === -->
<header class="subhead" id="overview">
	<h3>レジストリー</h3>
</header>

<ul class="breadcrumb">
  <li><%= link_to "レジストリー", 					:controller=>"admin", :action=>"company_index" %>&nbsp;<span class="divider">/</span></li>
  <li><%= link_to model_name(@item.company), 	:controller=>"admin", :action=>"company_show", 		:id=>@item.company %>&nbsp;<span class="divider">/</span></li>
  <li><%= link_to model_name(@item), 			:controller=>"admin", :action=>"company_show_shop", :id=>@item %>&nbsp;<span class="divider">/</span></li>
  <li class="active">利用状況</li>
</ul>

<ul class="nav nav-tabs" style="margin-bottom: 15px;">
	<li class="nav-item">
		<a class="nav-link" href="<%= url_for(:controller=>'admin', :action=>'company_show_shop', :id=>@item) %>">店舗情報</a>
	</li>
	<li  class="nav-item">
		<a class="nav-link" href="<%= url_for(:controller=>'admin', :action=>'shop_list_staffs', :id=>@item) %>">店舗スタッフ</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" href="<%= url_for(:controller=>'admin', :action=>'shop_list_users', :id=>@item) %>">店舗ユーザー</a>
	</li>
	<li class="nav-item">
		<a class="nav-link active" href="<%= url_for(:controller=>'admin', :action=>'shop_show_website',	:id=>@item) %>"><%= icon_site_status(@item.wsite_run_mode) %>&nbsp;サイト属性</a>
	</li>
</ul>

<h4>
	<span class="pull-right">
		<a class="btn btn-small btn-secondary" href="<%= url_for(:action=>'company_show_shop', :id=>@item) %>">
		<%= backward_icon('戻る')%>&nbsp;
			戻る
		</a>
	</span>
	<%= icon_site_status(@shop.wsite_run_mode) %>
	<%=model_name(@item)%>
	利用状況
</h4>

<hr/>
<h5>全体</h5>
<%= render :partial=>'company_show_shop_usage' %>

<hr/>
<h5>CMS</h5>
<%= render :partial=>'company_show_shop_cms_usage' %>
<% @anchor = ContentCategory.type_root(@shop, ContentCategory::TYPE_NEWS) %>
<%= render :partial=>'company_show_shop_cms_usage_by_category' %>
<% @anchor = ContentCategory.type_root(@shop, ContentCategory::TYPE_STREAM) %>
<%= render :partial=>'company_show_shop_cms_usage_by_category' %>
<% @anchor = ContentCategory.type_root(@shop, ContentCategory::TYPE_GALLERY) %>
<%= render :partial=>'company_show_shop_cms_usage_by_category' %>
<% @anchor = ContentCategory.type_root(@shop, ContentCategory::TYPE_PORTFOLIO) %>
<%= render :partial=>'company_show_shop_cms_usage_by_category' %>

<% if false %>
<hr/>
<h5>オプション</h5>

<table class="table table-bordered">
	<thead>
		<tr class="info">
			<th colspan="2">
				オプション
			</th>
		</tr>
	<thead>
	<tbody>
		<tr>
			<td class="span3">勤怠管理</td>
			<td class="span9">
				<%= (@shop.option_attendance_management)? raw("<i class='icon-check'></i'>&nbsp;利用中"): raw("<i class='icon-check-empty'></i'>&nbsp;未使用") %>
			</td>
		</tr>
		<tr>
			<td>簡易予約管理</td>
			<td>
				<%= (@shop.option_reservation_management)? raw("<i class='icon-check'></i'>&nbsp;利用中"): raw("<i class='icon-check-empty'></i'>&nbsp;未使用") %>
			</td>
		</tr>
		<tr>
			<td>顧客管理</td>
			<td>
				<%= (@shop.option_customer_management)? raw( "<i class='icon-check'></i'>&nbsp;利用中"): raw( "<i class='icon-check-empty'></i'>&nbsp;未使用") %>
			</td>
		</tr>
		<% if false %>
		<tr>
			<td>売上管理</td>
			<td>
				<%= (@shop.option_sales_management)? raw("<i class='icon-check'></i'>&nbsp;利用中"): raw("<i class='icon-check-empty'></i'>&nbsp;未使用") %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>		
<% end %>
