		<a class="nav-link" href="<%= url_for(:controller=>'admin', :action=>'shop_show_website',	:id=>@item) %>"><%= icon_site_status(@item.wsite_run_mode) %>&nbsp;サイト属性</a>
	</li>
</ul>
<div class="row">
	<div>
		<h4>
			<span class="float-right">
				<a class="btn btn-small btn-secondary" href="<%= url_for(:action=>'company_list_shop', :id=>@item.company) %>">
				<%= backward_icon('戻る')%>&nbsp;戻る
				</a>
				<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalEdit">
					<%= edit_icon('編集') %>&nbsp;編集
				</button>
			</span>
			店舗情報
		</h4>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th width='25%'>店舗ID</th>
					<td width='75%'>
						<%= model_alt_id(@item) %>
					</td>
				</tr>
				<tr>
					<th>名称</th>
					<td>
						<span class='float-right'>
							  <div class="btn-group">
									<a class="btn btn-mini btn-info" href="<%= url_for(:controller=>'bs_renderer', :wkey=>@shop.wsite_hash_key) %>" target="_blank">
										<%= share_icon('サイト表示')%>
										サイト表示
									</a>
									<%= link_to raw("<i class='fa-solid fa-right-to-bracket'></i>&nbsp;&nbsp;店舗管理画面"), {:action=>'delegating', :id=>@item}, :method => :post, :class=>"btn btn-mini btn-primary" %>
									<% url_business = url_for(:action=>"company_show_shop_usage", :id=>@shop) %>
									<a href="<%=url_business%>" class="btn btn-warning btn-mini">
										<%= site_status_icon(@shop.wsite_run_mode) %>
										利用状況表示
									</a>
							  </div>
						</span>
						<%= model_name(@item) %>
					</td>
				</tr>
				<% if false %>
				<tr>
					<th>営業時間</th>
					<td>
						<%= @item.operation_from.strftime("%l:%M %p")%>
						〜
						<%= @item.operation_until.strftime("%l:%M %p")%>
					</td>
				</tr>
				<tr>
					<th>電話番号</th><td><%= @item.telephone_1 %></td>
				</tr>
				<% end %>
				<tr>
					<th>郵便番号</th><td><%= @item.postal %>&nbsp;</td>
				</tr>
				<tr>
					<th>住所</th><td><%= @item.address_1 %>&nbsp;</td>
				</tr>
			</tbody>
		</table>
		<% if current_user.has_permission?(User::ROLE_OPERATOR) %>
			<hr/>
			<table class="table table-condensed table-bordered">
				<thead>
					<tr class="info">
						<th colspan="2">
							<span class="float-right">
								<button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#modalEditOption">
									<%= setting_icon('設定') %>&nbsp;設定
								</button>
							</span>
							オプション
						</th>
					</tr>
				<thead>
				<tbody>
					<tr>
						<th width="25%">勤怠管理</th>
						<td width="75%">
							<%= (@item.option_attendance_management)? raw("<i class='fa-solid fa-check' ></i>&nbsp;利用中"): raw("<i class='fa-solid fa-empty-set'></i>&nbsp;未使用") %>
						</td>
					</tr>
				</tbody>
			</table>
		<% end %>
		<% unless MAKE_SECRET_FUGA_OPTION %>
		<hr/>
		<table class="table table-condensed table-bordered">
			<thead>
				<tr class="info">
					<th colspan="2">
						<span class="float-right">
							<a class="btn btn-small btn-success"  data-toggle="modal" href="#modalEditOption">
								<%= setting_icon('設定') %>&nbsp;
									設定
							</a>
						</span>
						オプション
					</th>
				</tr>
			<thead>
			<tbody>
				<tr>
					<th width="25%">勤怠管理</th>
					<td width="75%">
						<%= (@item.option_attendance_management)? raw("<i class='fa-solid fa-check' ></i>&nbsp;利用中"): raw("<i class='fa-solid fa-empty-set'></i>&nbsp;未使用") %>
					</td>
				</tr>
				<tr>
					<th>簡易予約管理</th>
					<td>
						<%= (@item.option_reservation_management)? raw("<i class='fa-solid fa-check' ></i>&nbsp;利用中"): raw("<i class='fa-solid fa-empty-set'></i>&nbsp;未使用") %>
					</td>
				</tr>
				<tr>
					<th>顧客管理</th>
					<td>
						<%= (@item.option_customer_management)? raw("<i class='fa-solid fa-check' ></i>&nbsp;利用中"): raw("<i class='fa-solid fa-empty-set'></i>&nbsp;未使用") %>
					</td>
				</tr>
				<% if false %>
				<tr>
					<th>売上管理</th>
					<td>
						<%= (@item.option_sales_management)? raw("<i class='fa-solid fa-check' ></i>&nbsp;利用中"): raw("<i class='fa-solid fa-empty-set'></i>&nbsp;未使用") %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>		
