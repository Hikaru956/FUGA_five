<%
	opts = []
	opts << [label_user_role(User::ROLE_SUPER),		User::ROLE_SUPER]	if current_user.has_permission?(User::ROLE_SUPER)
	opts << [label_user_role(User::ROLE_OPERATOR),	User::ROLE_OPERATOR]
	opts << [label_user_role(User::ROLE_REGISTRAR),	User::ROLE_REGISTRAR]
	opts << [label_user_role(User::ROLE_SALES),		User::ROLE_SALES]
%>
<div class="mb-3 row">
	<label for="name" class="col-sm-4 col-form-label">役割</label>
	<div class="col-sm-8">
        <%= f.select :role, options_for_select(opts, item.role), {include_blank:'選択してください' }, {:required => true, class: 'form-control'} %>
	</div>
</div>
<div class="mb-3 row">
	<label for="name" class="col-sm-4 col-form-label">表示名</label>
	<div class="col-sm-8">
		<%= f.text_field :name, {class: "form-control", placeholder: "表示名を入力", :required => true, autofocus: true} %>
	</div>
</div>
<div class="mb-3 row">
	<label for="name" class="col-sm-4 col-form-label">ログイン</label>
	<div class="col-sm-8">
		<%= f.text_field :login, {class: "form-control", placeholder: "Email形式", :required => true, autofocus: true} %>
	</div>
</div>
<div class="mb-3 row">
	<label for="name" class="col-sm-4 col-form-label">連絡先</label>
	<div class="col-sm-8">
		<%= f.text_field :email, {class: "form-control", placeholder: "メールアドレスを入力", :required => FALSE, autofocus: true} %>
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-4">
		<%= f.label :ui_version, 'バージョン設定', {class: 'form-label'} %>
	</div>
	<div class="col-sm-8 btn-group btn-group-toggle" data-toggle='buttons' role="group">
		<input type="radio" class="btn-check" name="user[ui_version]" id="btnradio5" value='' checked>
		<label class="btn btn-outline-primary" for="btnradio5">旧バージョン…</label>

		<input type="radio" class="btn-check" name="user[ui_version]" id="btnradio6" value='1'>
		<label class="btn btn-outline-primary" for="btnradio6">新バージョン…</label>

	</div>
</div>
