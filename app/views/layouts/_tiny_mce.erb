<script type="text/javascript">
tinymce.init({
    selector: "textarea.rich",
	language : 'ja',
    plugins: [
        "advlist autolink lists link charmap print preview anchor",
        "searchreplace visualblocks code fullscreen",
        "emoticons","textcolor","image",
        "insertdatetime media table contextmenu paste"
    ],
    <% unless target.blank? %>
	    <% unless target.photos.blank? %>
		image_list: [ 
			<%= photo_array(target.photos) %>
		    ],
	    <% end %>
    <% end %>
    relative_urls : false,
    convert_urls: false,
    content_style: 'img { max-width: 100%; height: auto; }' ,
			resize: 'both',
    toolbar: "insertfile undo redo | styleselect fontselect fontsizeselect | forecolor backcolor | emoticons  image link | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent"
});
</script>
