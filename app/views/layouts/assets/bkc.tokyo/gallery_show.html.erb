<!doctype html>
<html lang="ja">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host == 'sr2.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<meta property="og:type"              content="article">
<meta property="og:url"               content="//<%= request.host + url_for(:action=>'gallery_show', :id=>@seed) %>">
<meta property="og:title"             content="<%= model_title(@seed) %> - <%= @website.name %>">
<meta property="og:site_name"         content="<%= @website.name %>">
<% unless @website.social_facebook_uri.blank? %>
<meta property="article:publisher"    content="<%= @website.social_facebook_uri %>">
<% end %>
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<% end %>
<script src="https://use.fontawesome.com/9e789611aa.js"></script>
<link rel="stylesheet" href="/stylesheets/assets/vendor/sanitize-5.0.0.css">
<link rel="stylesheet" href="/stylesheets/assets/bkc.tokyo/style.css">
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/style" %>
</head>
<body>
<!-- 主ウインドウ -->
<main id="main" class="scroollwrap">
    <div class="scrooller">
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/header" %>
        <article id="article">
            <div class="container">
                <div class="wrapper">
                    <div class="col-1p2">
                        <div id="gallery">
<% @photos = @seed.photos %>
<% unless @photos.blank? %>
                            <ul>
    <% @photos.each do | photo | %>
                                <li>
                                    <img src="<%= photo.clip.url(:panel) %>" alt="">
        <% unless photo.info.blank? %>
                                    <div class="caption"><%=h photo.info%></div>
        <% end %>
                                </li>
    <% end %>
                            </ul>
                            <div id="gallery_prev"><i class="fa fa-chevron-circle-left"></i></div>
                            <div id="gallery_next"><i class="fa fa-chevron-circle-right"></i></div>
<% end %>
                        </div>
                    </div>
                    <div class="col-1p2">
                        <div>
                            <header>
                                <h1><%= model_title(@seed) %></h1>
<% unless @seed.staff.blank? || @seed.staff.staff_status==Staff::STAFF_BLOCKED %>
                                <div class="publish">
                                    <i class="fa fa-user"></i> <a href="<%= url_for(:action=>'staff', :id=>@seed.staff) %>"><%= h model_name(@seed.staff) %></a>
                                </div>
<% end %>
                            </header>
<% unless @seed.description.blank? %>
                            <div id="contents">
                                <%= raw @seed.description %>
                            </div>
<% end %>
                        </div>
                    </div>
                </div>
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/sns_btn" %>
            </div>
        </article>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/footer" %>
    </div>
</main>
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav" class="scroollwrap">
    <ul class="scrooller">
        <li>
            <i class="fa fa-times" aria-hidden="true"></i> 閉じる
        </li>
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/navigation" %>
    </ul>
</aside>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/common_js" %>
<!-- page specific javascript -->
<script src="/javascripts/assets/bkc.tokyo/gallery.js"></script>
<!-- social net javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bkc.tokyo/social_js" %>
<!-- google maps javascript -->
</body>
</html>
