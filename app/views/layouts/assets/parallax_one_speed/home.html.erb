<% top_circle_image = VisualWidget.search_widget_bag_for(@website, "892967795f496518f8f232104f9c8b48") %>
<% slide_photos = VisualWidget.search_widget_bag_for(@website, "639bb6e39886c4d99d4e95721f855a58") %>

<% sec1_title = VisualWidget.search_widget_bag_for(@website, "75b2be168f866d9d15f5145a9c615eb0") %>
<% sec1_row1 = VisualWidget.search_widget_bag_for(@website, "5dc1e339d0c99e4a57ce19dd4dffef62") %>
<% sec1_row2 = VisualWidget.search_widget_bag_for(@website, "5a48219a401f5104afdd2cfab2531bc6") %>
<% sec2_title = VisualWidget.search_widget_bag_for(@website, "fd216c0e76a865d209a3d4df9e5b0538") %>
<% sec2_row = VisualWidget.search_widget_bag_for(@website, "72ec424bd90f0dbc0db356ffa1d1c338") %>
<% sec3_title = VisualWidget.search_widget_bag_for(@website, "655f397b6539f75280fcfdc8ab002ee8") %>
<% sec3_row = VisualWidget.search_widget_bag_for(@website, "520096d201d04b5bab5e34ac1d2c91e4") %>
<% sec4_title = VisualWidget.search_widget_bag_for(@website, "ff25551a5ec0b9b22c1bdcfd50493511") %>
<% sec4_row = VisualWidget.search_widget_bag_for(@website, "a9f8c3764bd96bd1833021d1cce58dce") %>
<html>
	<%= render :partial=>"#{LayoutScheme.asset_root}/parallax_one_speed/head" %>
	<body class="is-preload landing">
		<div id="page-wrapper">

			<!-- Header -->
				<%= render :partial=>"#{LayoutScheme.asset_root}/parallax_one_speed/header" %>

			<!-- Banner -->
				<section id="banner">
					<div class="content">
						<header>
							<h2><%= @website.name%></h2>
							<p><%= @website.wsite_description_shop%></p>
						</header>
						<span class="image">
							<% if top_circle_image.blank? %>
								<img src="/assets/parallax_one_speed/images/pic01.jpg" alt="" />
							<% else %>
								<% top_circle_image.photos.each do | photo | %>
									<img src="<%= photo.clip.url() %>">
								<% end %>
							<% end %>
						</span>
					</div>
					<a href="#one" class="goto-next scrolly">Next</a>
				</section>

			<!-- One -->
				<% photos = slide_photos.photos.to_a %>
				<section id="one" class="spotlight style1 bottom">
					<span class="image fit main">
						<img src="<%= photos[0].clip.url()%>" alt="" />
					</span>
					<div class="content">
						<div class="container">
							<div class="row">
								<div class="col-4 col-12-medium">
									<header>
										<h2><%= sec1_title.data_string%></h2>
									</header>
								</div>
								<div class="col-4 col-12-medium">
									<p><%= sec1_row1.data_text %></p>
								</div>
								<div class="col-4 col-12-medium">
									<p><%= sec1_row2.data_text %></p>
								</div>
							</div>
						</div>
					</div>
					<a href="#two" class="goto-next scrolly">Next</a>
				</section>

			<!-- Two -->
				<section id="two" class="spotlight style2 right">
					<span class="image fit main">
						<img src="<%= photos[1].clip.url()%>" alt="" />
					</span>
					<div class="content">
						<header>
							<h2><%= sec2_title.data_string%></h2>
						</header>
						<p><%= sec2_row.data_text %></p>
					</div>
					<a href="#three" class="goto-next scrolly">Next</a>
				</section>

			<!-- Three -->
				<section id="three" class="spotlight style3 left">
					<span class="image fit main bottom">
						<img src="<%= photos[2].clip.url()%>" alt="" />
					</span>
					<div class="content">
						<header>
							<h2><%= sec3_title.data_string%></h2>
						</header>
						<p><%= sec3_row.data_text %></p>
					</div>
					<a href="#four" class="goto-next scrolly">Next</a>
				</section>

			<!-- Four -->
				<section id="four" class="wrapper style1 special fade-up">
					<div class="container">
						<header class="major">
							<h2><%= sec4_title.data_string %></h2>
							<p><%= sec4_row.data_text %></p>
						</header>
						<div class="box alt">
							<div class="row gtr-uniform">
								<section class="col-6 col-6-medium col-12-xsmall">
									<a href="<%= url_for(:action=>'news_index', :wkey=>@website.wsite_hash_key) %>">
										<span class="icon solid alt major fa-newspaper"></span>
										<h3>ニュース</h3>
									</a>
								</section>
								<section class="col-6 col-6-medium col-12-xsmall">
									<a href="<%= url_for(action: 'stream_index', wkey: @website.wsite_hash_key)%>">
										<span class="icon solid alt major fa-blog"></span>
										<h3>ブログ</h3>
									</a>
								</section>
								<section class="col-6 col-6-medium col-12-xsmall">
									<a href="<%= url_for(action: 'gallery_index', wkey: @website.wsite_hash_key)%>">
										<span class="icon solid alt major fa-images"></span>
										<h3>ギャラリー</h3>
									</a>
								</section>
								<section class="col-6 col-6-medium col-12-xsmall">
									<a href="<%= url_for(action: 'portfolio_index', wkey: @website.wsite_hash_key)%>">
										<span class="icon solid alt major fa-receipt"></span>
										<h3>価格表</h3>
									</a>
								</section>
							</div>
						</div>
					</div>
				</section>

			<!-- Five -->
				<% if @website.enable_inquiry? %>
					<section id="five" class="wrapper style2 special fade">
						<div class="container">
							<header>
								<h2>お問い合わせ</h2>
							</header>
							<form method="post" action="#" class="cta">
								<%= form_for Inquiry.new, url: inquiry_create_path, method: :post do |f| -%>
								<%= f.hidden_field :shop_id, value: @website.id %>
									<%= render :partial=>"#{LayoutScheme.asset_root}/parallax_one_speed/form_inquiry_new", locals: {f: f} %>
								<% end %>
								<div class="alt-send-button">
									<input class="fit primary" id="submit" type="submit" value="送信">
								</div>
							</form>
						</div>
					</section>
				<% end %>

			<!-- Footer -->
				<%= render :partial=>"#{LayoutScheme.asset_root}/parallax_one_speed/footer" %>

		</div>

		<!-- Scripts -->
		<script src="/assets/parallax_one_speed/js/jquery.min.js"></script>
		<script src="/assets/parallax_one_speed/js/jquery.scrolly.min.js"></script>
		<script src="/assets/parallax_one_speed/js/jquery.dropotron.min.js"></script>
		<script src="/assets/parallax_one_speed/js/jquery.scrollex.min.js"></script>
		<script src="/assets/parallax_one_speed/js/browser.min.js"></script>
		<script src="/assets/parallax_one_speed/js/breakpoints.min.js"></script>
		<script src="/assets/parallax_one_speed/js/util.js"></script>
		<script src="/assets/parallax_one_speed/js/main.js"></script>
	</body>
</html>
