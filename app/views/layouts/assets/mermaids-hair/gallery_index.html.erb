<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/assets/mermaids-hair/style.css">
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/style" %>
</head>
<!--[if !IE]><!-->
<body>
<!--<![endif]-->
<!--[if IE]>
<body id="ie">
<div id="browserupgrade">あなたは<strong>古い</strong>アプリケーションをご利用のようです。<a href="http://browsehappy.com/">最新のブラウザ</a>に更新して快適なインターネットをお楽しみ下さい。</div>
<![endif]-->
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/header" %>
<!-- グローバルナビゲーション -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/navigation" %>
        <div>
            <div class="container">
<!-- パンくずリスト -->
                    <aside id="breadcrumbs">
                        <ol>
<% if request.host == 'staffroom.swifty.jp' %>
                            <li><a href="/home?wkey=<%= @website.wsite_hash_key %>"><i class="fa fa-home"></i></a></li>
<% else %>
                            <li><a href="/home"><i class="fa fa-home"></i></a></li>
<% end %>
                            <li><%= model_title(@seed) %></li>
                        </ol>
                    </aside>
                    <h1><%= model_title(@seed) %></h1>
                    <section id="streem_table">
                        <ul class="wrapper">
<%
    @public_bag =  @seed.public_bags
    unless @public_bag.blank?
        @public_bag.each do | leaf |
            key_photo = key_photo(leaf)
            unless key_photo.blank?
                image_url = key_photo.clip.url(:panel)
            else
                image_url = '//placehold.it/327x327&amp;text=No Photo'
            end
            if request.host == 'staffroom.swifty.jp'
                gallery_url = url_for(:action=>'gallery_list', :id=>leaf, :wkey=>@website.wsite_hash_key)
            else
                gallery_url = url_for(:action=>'gallery_list', :id=>leaf)
            end
%>
                            <li class="col-1p4">
                                <div class="imgbox imgbox15"><div style="background-image:url('<%= image_url %>');">
                                    <a href="<%= gallery_url %>"><img src="<%= image_url %>"></a>
                                </div></div>
                                <h1>
                                    <a href="<%= gallery_url %>"><%= model_name(leaf) %></a>
                                </h1>
                            </li>
<%      end %>
<%  end %>
                        </ul>
                    </section>
            </div>
        </div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/footer" %>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<!-- google maps javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mermaids-hair/gmaps_js" %>
</body>
</html>
