    slid2 = VisualWidget.search_widget_bag_for(@website, "d3644771c3ab32a75591ac9d6578d930")
%>
<%  gmapcode = VisualWidget.search_widget_bag_for(@website, "187cae7780a0ce22cb229f2cfb018471") %>
<footer id="footer">
    <div class="container">
        <div class="wrapper">
            <div class="col-1p2">
                <div class="footer_logo">
                <% if logo1.photos[0].blank? %>
                    <img src="//placehold.it/260x120" alt="logo mark">
                <% else %>
                    <img src="<%= logo1.photos[0].clip.url(:image) %>" alt="logo mark">
                <% end %>
                </div>
                <div>
                <% unless @website.address_1.blank? %>
                    <%= @website.address_1 %>
                <% else %>
                    &nbsp;
                <% end %>
                </div>
                <div class="footer_tel">
                <% unless @website.wsite_telephone.blank? %>
                    <i class="fa fa-phone"></i> <a href="tel:<%= @website.wsite_telephone %>"><%= @website.wsite_telephone %></a>
                <% end %>
                <% unless free1.data_string.blank? %>
                    フリーダイヤル <a href="tel:<%= free1.data_string %>"><%= free1.data_string %></a>
                <% end %>
                </div>
