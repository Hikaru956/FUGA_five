                <div id="carousel1">
                    <div>
                        <ul id="carousel1_ul">
<% slid1.photos.each do | photo | %>
                            <li><img src="<%= photo.clip.url(:image) %>"></li>
<% end %>
                        </ul>
                        <div id="carousel1_prev"><i class="fa fa-chevron-circle-left"></i></div>
                        <div id="carousel1_next"><i class="fa fa-chevron-circle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-1p2">
                <div class="footer_logo">
                <% if logo2.photos[0].blank? %>
                    <img src="//placehold.it/260x120" alt="logo mark">
                <% else %>
                    <img src="<%= logo2.photos[0].clip.url(:image) %>" alt="logo mark">
                <% end %>
                </div>
                <div>
                <% unless add2.data_string.blank? %>
                    <%= add2.data_string %>
                <% else %>
                    &nbsp;
                <% end %>
                </div>
                <div class="footer_tel">
                <% unless tel2.data_string.blank? %>
                    <i class="fa fa-phone"></i> <a href="tel:<%= tel2.data_string %>"><%= tel2.data_string %></a>
                <% end %>
                <% unless free2.data_string.blank? %>
                    フリーダイヤル <a href="tel:<%= free2.data_string %>"><%= free2.data_string %></a>
                <% end %>
                </div>
