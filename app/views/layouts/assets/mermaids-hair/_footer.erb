<%
    logo1 = VisualWidget.search_widget_bag_for(@website, "c53c2dc7b7f2d487cabf84c8743da87b")
    free1 = VisualWidget.search_widget_bag_for(@website, "3ecdf8be8b1a4e3e266c8b04dfc11454")
