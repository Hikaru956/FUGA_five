                    <div>
                        <ul id="carousel2_ul">
<% slid2.photos.each do | photo | %>
                            <li><img src="<%= photo.clip.url(:image) %>"></li>
<% end %>
                        </ul>
                        <div id="carousel2_prev"><i class="fa fa-chevron-circle-left"></i></div>
                        <div id="carousel2_next"><i class="fa fa-chevron-circle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
<%  if !gmapcode.blank? && gmapcode.is_valid? %>
        <div id="gmap1" class="gmap">
            <%= raw gmapcode.data_string %>
        </div>
<%  else %>
        <% unless @website.lat.blank? || @website.lng.blank? %>
        <div id="gmap1" class="gmap"></div>
        <div class="text-right">
            <a href="https://www.google.co.jp/maps/@<%= @website.lat %>,<%= @website.lng %>,16z?hl=ja" target="_blank">大きな地図で見る</a>
        </div>
        <% end %>
<%  end %>
        <div id="copyright">
            <small><%= copyright_notice(@website) %></small>
        </div>
    </div>
</footer>
