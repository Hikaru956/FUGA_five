<% widget_bag0 = VisualWidget.search_widget_bag_for(@website, "6d44e908ed4058af15d2a90b50adf955") %>
<% widget_bag1 = VisualWidget.search_widget_bag_for(@website, "df0575e4e563fde52ccc1996659195eb") %>
<% widget_bag2 = VisualWidget.search_widget_bag_for(@website, "86d6484ef0bd0dba21e4fb19cbd00416") %>
<% widget_bag3 = VisualWidget.search_widget_bag_for(@website, "148f9c59ce60bf5b0604e84357f62628") %>
<%  gmapcode1 = VisualWidget.search_widget_bag_for(@website, "5e187c77ada2fccb894986bbed79656e") %>
<%  gmapcode2 = VisualWidget.search_widget_bag_for(@website, "1eeabc23e999be3d570127d955ff1557") %>
    <div class="row foot_shop">
        <!-- shop1 -->
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div>
<% if widget_bag0.blank? || !widget_bag0.is_valid? %>
                <img src="//placehold.it/260x100&amp;text=HURRAH" class="foot_shop_logo">
<% else %>
                <img src="<%= widget_bag0.photos[0].clip.url() %>" class="foot_shop_logo">
<% end %>
            </div>
            <div class="foot_shop_text">
                新潟市中央区万代1-2-3 コーポ野村万代1F<br>
                <a href="tel:025-250-7434"><i class="icon-phone"></i> 025-250-7434</a><br>
                営業時間：[通常] 11:00〜20:00[木曜]12:00〜21:00[日・祝]11:00〜19:00<br>
                定休日：月曜／第3火曜
            </div>
            <div>
<% if widget_bag2.blank? || !widget_bag2.is_valid? %>
                <img src="//placehold.it/640x300&amp;text=No Photo" class="foot_shop_img">
<% else %>
                <div id="carousel-example-generic2" class="carousel slide">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <% widget_bag2.photos.each do | photo | %>
                        <li data-target="#carousel-example-generic2" data-slide-to="<%= photo.position-1%>" <%if photo.position==1%>class="active"<% end %>></li>
                        <% end %>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <% widget_bag2.photos.each do | photo | %>
                        <div class="item <%if photo.position==1%>active<%end%>">
                            <%= image_tag photo.clip.url(), :class=>"img-responsive img-full")%>
                        </div>
                        <% end %>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic2" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic2" data-slide="next">
                        <span class="icon-next"></span>
                    </a>
                </div>
<% end %>
            </div>
            <div style="margin-top:1em;">
<%  if !gmapcode1.blank? && gmapcode1.is_valid? %>
                <div id="gmap1" style="height:480px;overflow:hidden;">
                    <%= raw gmapcode1.data_string %>
                </div>
<%  else %>
                <div id="gmap1" style="height:480px;"></div>
<%  end %>
            </div>
        </div>
        <!-- shop2 -->
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div>
<% if widget_bag1.blank? || !widget_bag1.is_valid? %>
                <img src="//placehold.it/260x100&amp;text=THINGS" class="foot_shop_logo">
<% else %>
