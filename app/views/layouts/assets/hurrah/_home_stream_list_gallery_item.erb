<div>
    <!-- 記事へのリンク -->
    <a href="<%= url_for(:action=>'gallery_list', :id=>temp_local, :wkey=>@website.wsite_hash_key) %>">
        <!-- 最初の写真 -->
<% key_photo = temp_local.photos.find(:first) %>
<% unless key_photo.blank? %>
        <div class="latest_imgbox"><div><%= image_tag(url_for_file_column(key_photo, :image, 'panel')) %></div></div>
<% else %>
        <div class="latest_imgbox"><div><img src="//placehold.it/480x360/ffffff/cccccc&amp;text=No Photo"></div></div>
<% end %>
    </a>
    <!-- 記事タイトル -->
    <a href="<%= url_for(:action=>'gallery_list', :id=>temp_local, :wkey=>@website.wsite_hash_key) %>">
        <h2 class="latest_h2"><%= truncate(model_name(temp_local)) %></h2>
    </a>
</div>
