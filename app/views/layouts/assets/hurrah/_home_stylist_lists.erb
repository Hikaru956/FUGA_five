<% @staffs = @website.public_staffs %>

<% unless @staffs.blank? %>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="latest_h1">STAFF</h1>
        </div>
    </div>
    <div class="row">
        <ul class="box latest_ul clearfix">
    <% @staffs.each do | staff | @staff = staff %>
            <li class="latest_li col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <!-- 記事へのリンク -->
                <a href="<%= url_for(:action=>'staff', :id=>@staff, :wkey=>@website.wsite_hash_key) %>">
                <!-- 最初の写真 -->
        <% key_photo = key_photo(@staff) %>
        <% unless key_photo.blank? %>
                    <div class="staff_imgbox"><div><%= image_tag key_photo.clip.url(:panel) %></div></div>
        <% else %>
                    <div class="staff_imgbox"><div><img src="//placehold.it/480x360/ffffff/cccccc&amp;text=No Photo"></div></div>
        <% end %>
                </a>
                <!-- 記事タイトル -->
                <a href="<%= url_for(:action=>'staff', :id=>@staff, :wkey=>@website.wsite_hash_key) %>">
                    <h2 class="latest_h2"><%= model_name(@staff) %> <small><%= h @staff.job_title %></small></h2>
                </a>
            </li>
    <% end %>
        </ul>
    </div>
<% end %>
