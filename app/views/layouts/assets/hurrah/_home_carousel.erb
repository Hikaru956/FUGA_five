<% widget_bag = VisualWidget.search_widget_bag_for(@website, "fb14923f10e3bc5f3fd2c767a217d9c5") %>
<% if widget_bag.blank? || !widget_bag.is_valid? %>
      <div class="row">
        <div class="box">
          <div class="col-lg-12 text-center">
            <div id="carousel-example-generic" class="carousel slide">
              <!-- Indicators -->
              <ol class="carousel-indicators hidden-xs">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <%= image_tag "/images/assets/business-casual/slide-1.jpg", :class=>"img-responsive img-full" %>
                </div>
                <div class="item">
                  <%= image_tag "/images/assets/business-casual/slide-2.jpg", :class=>"img-responsive img-full" %>
                </div>
                <div class="item">
                  <%= image_tag "/images/assets/business-casual/slide-3.jpg", :class=>"img-responsive img-full" %>
                </div>
              </div>

              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="icon-prev"></span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="icon-next"></span>
              </a>
            </div>
          </div>
        </div>

      </div>
<% else %>
      <div class="row">
        <div class="box">
          <div class="col-lg-12 text-center">
            <div id="carousel-example-generic" class="carousel slide">
              <!-- Indicators -->
              <ol class="carousel-indicators hidden-xs">
	        	<% widget_bag.photos.each do | photo | %>
		          <li data-target="#carousel-example-generic" data-slide-to="<%= photo.position-1%>" <%if photo.position==1%>class="active"<% end %>></li>
			  	<% end %>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
	        	<% widget_bag.photos.each do | photo | %>
			          <div class="item <%if photo.position==1%>active<%end%>">
			          	<%= image_tag photo.clip.url(), :class=>"img-responsive img-full"%>
			          </div>
				<% end %>
              </div>

              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="icon-prev"></span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="icon-next"></span>
              </a>
            </div>
          </div>
        </div>

      </div>
<% end %>
