<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="copyright"                content="<%= model_name(@website.company) %>">
<% if request.host == 'staffroom.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% unless @website.custom_metas.blank? %>
<%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%= auto_discovery_link_tag :rss, "/stream_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/sabouyamadaya.com/style" %>
</head>
<body id="news_index">
<%= render :partial=>"#{LayoutScheme.asset_root}/sabouyamadaya.com/header" %>
<article id="galleryList" class="container">
    <h1><%= model_title(@seed) %></h1>
    <ul class="wrapper">
<%
    @public_bag =  @seed.public_bags
    unless @public_bag.blank?
        @public_bag.each do | bag |
            latests = bag.public_leafs
            unless latests.blank?
# 2016/09/20 Tachikawa Start
                position = 0
                target   = nil
                latests.each do | leaf |
                    if position < leaf.position
                        target = leaf
                        position = leaf.position
                    end
                end
                key_photo = key_photo(target)
# 2016/09/20 Tachikawa End
#                key_photo = key_photo(latests[0])
                unless key_photo.blank?
                    image_url = key_photo.clip.url(:panel)
                else
                    image_url = '//placehold.jp/1020x680.png?text=No Photo'
                end
                if true || request.host == 'staffroom.swifty.jp'
                    content_url = url_for(:action=>'news_list', :id=>bag, :wkey=>@website.wsite_hash_key)
                else
                    content_url = url_for(:action=>'news_list', :id=>bag)
                end
%>
        <li>
            <div><a href="<%= content_url %>"><img src="<%= image_url %>" alt="<%= truncate(model_name(bag)) %>"></a></div>
            <h2><a href="<%= content_url %>"><%= truncate(model_name(bag)) %>></a></h2>
        </li>
<%          end %>
<%      end %>
<%  end %>
    </ul>
</article>
<%= render :partial=>"#{LayoutScheme.asset_root}/sabouyamadaya.com/footer" %>
<% unless @website.analytics_code.blank? %>
<%= raw @website.analytics_code %>
<% end %>
</body>
</html>
