            latests = bag.public_leafs
            unless latests.blank?
# 2016/09/20 Tachikawa Start
                position = 0
                target   = nil
                latests.each do | leaf |
                    if position < leaf.position
                        target = leaf
                        position = leaf.position
                    end
                end
                key_photo = key_photo(target)
# 2016/09/20 Tachikawa End
#                key_photo = key_photo(latests[0])
                unless key_photo.blank?
                    image_url = key_photo.clip.url(:panel)
                else
                    image_url = '//placehold.it/327x327&amp;text=No Photo'
                end
                if request.host == 'sr2.swifty.jp'
                    content_url = url_for(:action=>'news_list', :id=>bag, :wkey=>@website.wsite_hash_key)
                else
                    content_url = url_for(:action=>'news_list', :id=>bag)
                end
%>
                            <li class="col-1p2">
                                <div class="imgbox"><div style="background-image:url('<%= image_url %>');">
                                    <a href="<%= content_url %>"><img src="<%= image_url %>"></a>
                                </div></div>
                                <h1>
                                    <a href="<%= content_url %>"><%= truncate(model_name(bag)) %></a>
                                </h1>
                            </li>
<%          end %>
<%      end %>
<%  end %>
                        </ul>
                    </section>
                </main>
<!-- サイドエリア -->
<%= render :partial=>"#{LayoutScheme.asset_root}/albino_speed/sidebar" %>
            </div>
        </div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/albino_speed/footer" %>
    </div>
</div>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/albino_speed/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/albino_speed/social_js" %>
<!-- google maps javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/albino_speed/gmaps_js" %>
</body>
</html>
