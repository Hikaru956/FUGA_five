<!doctype html>
<html lang="ja">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% fbappid = VisualWidget.search_widget_bag_for(@website, "cfbc467ab5daae35512725f48397b226") %>
<% unless fbappid.data_string.blank? %>
<meta property="fb:app_id"            content="<%= fbappid.data_string %>">
<% end %>
<meta property="og:type"              content="article">
<meta property="og:url"               content="http://<%= request.host + url_for(:action=>'gallery_show', :id=>@seed) %>">
<meta property="og:title"             content="<%= model_title(@seed) %> - <%= @website.name %>">
<meta property="og:site_name"         content="<%= @website.name %>">
<% unless @website.social_facebook_uri.blank? %>
<meta property="article:publisher"    content="<%= @website.social_facebook_uri %>">
<% end %>
<!-- Twitter card も入れる？ -->
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/assets/la-isla-bonita.jp/style.css">
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/style" %>
</head>
<!-- このサイトはIE9未満では正しく表示されません。 -->
<!--[if lt IE 9]>
<body id="ie8">
<![endif]-->
<!--[if IE 9]>
<body id="ie9">
<![endif]-->
<!--[if (gt IE 10)|!(IE)]><!-->
<body>
<!--<![endif]-->
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/header" %>
<!-- グローバルナビゲーション -->
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/navigation" %>
<div>
    <div class="container">
        <div class="content_box">
<!-- パンくずリスト -->
            <aside id="breadcrumbs">
                <ol>
<% if request.host == 'staffroom.swifty.jp' %>
                    <li><a href="/home?wkey=<%= @website.wsite_hash_key %>"><i class="fa fa-home"></i></a></li>
<% else %>
                    <li><a href="/home"><i class="fa fa-home"></i></a></li>
<% end %>
<% unless @seed.content_category.has_only_a_public_bag? %>
<%      if request.host == 'staffroom.swifty.jp' %>
                    <li><a href="<%= url_for(:action=>'gallery_index', :id=>@seed.content_category.my_bag_root_category.parent, :wkey=>@website.wsite_hash_key) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      else %>
                    <li><a href="<%= url_for(:action=>'gallery_index', :id=>@seed.content_category.my_bag_root_category.parent) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      end %>
<% end %>
<% @seed.content_category.category_path(true).each do | category | %>
<%      if request.host == 'staffroom.swifty.jp' %>
                    <li><%= link_to category.category_label, :action=>"gallery_list", :id=>category, :wkey=>@website.wsite_hash_key %></li>
<%      else %>
                    <li><%= link_to category.category_label, :action=>"gallery_list", :id=>category %></li>
<%      end %>
<% end %>
                    <li class="active">
                        <%= model_title(@seed) %>
                    </li>
                </ol>
            </aside>
            <!-- <h1 class="page_head"><span><%= model_title(@seed.content_category.my_bag_root_category.parent) %></span></h1> -->
            <article id="article" class="wrapper">
                <div class="col-1p2">
                    <div id="gallery">
<% @photos = @seed.photos %>
<% unless @photos.blank? %>
                        <ul>
    <% @photos.each do | photo | %>
                            <li>
                                <img src="<%= photo.clip.url(:image) %>" alt="">
        <% unless photo.info.blank? %>
                                <div class="caption"><%=h photo.info%></div>
        <% end %>
                            </li>
    <% end %>
                        </ul>
                        <div id="gallery_prev"><i class="fa fa-chevron-circle-left"></i></div>
                        <div id="gallery_next"><i class="fa fa-chevron-circle-right"></i></div>
<% end %>
                    </div>
                </div>
                <div class="col-1p2">
                    <header>
                        <h1><%= model_title(@seed) %></h1>
<% unless @seed.staff.blank? || @seed.staff.staff_status==Staff::STAFF_BLOCKED %>
                        <div class="publish">
                            <i class="fa fa-user"></i> <a href="<%= url_for(:action=>'staff', :id=>@seed.staff) %>"><%= h model_name(@seed.staff) %></a>
                        </div>
<% end %>
                    </header>
<% unless @seed.description.blank? %>
                    <div id="contents">
                        <%= raw @seed.description %>
                    </div>
<% end %>
                </div>
            </article>
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/sns_btn" %>
        </div>
    </div>
</div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/footer" %>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/common_js" %>
<!-- page specific javascript -->
<script src="/javascripts/assets/la-isla-bonita.jp/gallery.js"></script>
<!-- social net javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/social_js" %>
<!-- google maps javascript -->
</body>
</html>
