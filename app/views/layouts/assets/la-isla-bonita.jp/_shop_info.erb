<%  gmapcode = VisualWidget.search_widget_bag_for(@website, "d02b1a2621661f4becd80ebf9ed1b445") %>
<aside>
    <div class="container">
        <h1 class="page_head"><span>SALON</span></h1>
        <div class="content_box">
            <div class="wrapper">
                <div class="col-1p2">
<%  if !gmapcode.blank? && gmapcode.is_valid? %>
                    <div id="gmap">
                        <%= raw gmapcode.data_string %>
                    </div>
<%  else %>
                    <div id="gmap"></div>
                    <div class="text-right">
                        <a href="https://www.google.co.jp/maps/@<%= @website.lat %>,<%= @website.lng %>,16z?hl=ja" target="_blank">大きな地図で見る</a>
                    </div>
<%  end %>
                </div>
                <div class="col-1p2 contents">
                    <h1><%= model_name(@website) %></h1>
<% unless @website.wsite_description_business.blank? %>
                    <%=raw @website.wsite_description_business%>
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/la-isla-bonita.jp/sns_btn" %>
                </div>
            </div>
        </div>
    </div>
</aside>
