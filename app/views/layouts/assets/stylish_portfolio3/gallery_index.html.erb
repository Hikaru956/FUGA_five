<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="copyright"                content="<%= model_name(@website.company) %>">
<% if request.host == 'sr2.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% unless @website.custom_metas.blank? %>
<%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%= auto_discovery_link_tag :rss, "/stream_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/style" %>
</head>
<body id="gallery_index">
<div id="top">
</div>
<aside id="breadcrumbs">
    <div class="container">
        <ol>
<% if request.host == 'sr2.swifty.jp' %>
            <li><a href="/home?wkey=<%= @website.wsite_hash_key %>"><i class="pico-home"></i></a></li>
<% else %>
            <li><a href="/home"><i class="pico-home"></i></a></li>
<% end %>
            <li><%= model_title(@seed) %></li>
        </ol>
    </div>
</aside>
<main>
    <div class="container">
        <h1><%= model_title(@seed) %></h1>
        <article id="style-list">
            <ul class="wrapper gallery-list">
<%
    @public_bag =  @seed.public_bags
    unless @public_bag.blank?
        @public_bag.each do | leaf |
            key_photo = key_photo(leaf)
            unless key_photo.blank?
                image_url = key_photo.clip.url(:panel)
            else
                image_url = '//placehold.jp/327x327.png?text=No Photo'
            end
            if request.host == 'sr2.swifty.jp'
                gallery_url = url_for(:action=>'gallery_list', :id=>leaf, :wkey=>@website.wsite_hash_key)
            else
                gallery_url = url_for(:action=>'gallery_list', :id=>leaf)
            end
%>
                <li class="m3p3">
                    <div class="imgbox">
                        <div>
                            <a href="<%= gallery_url %>"><img src="<%= image_url %>"></a>
                        </div>
                    </div>
                    <h2>
                        <a href="<%= gallery_url %>">
                            <%= model_name(leaf) %>
                        </a>
                    </h2>
                </li>
<%      end %>
<%  end %>
            </ul>
        </article>
    </div>
</main>
<!-- Footer sns links -->
<aside id="footsns">
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/sns_links" %>
</aside>
<!-- Footer nav -->
<aside id="footnav">
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/navigation" %>
</aside>
<!-- Footer -->
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/footer" %>
<!-- Header -->
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/header" %>
<div id="gotop"><a href="#top"></a></div>
<!-- Navigation -->
<div id="gnav" class="">
	<div class="container">
	    <h1>- site navigation -</h1>
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/navigation" %>
		<div id="navcloser"></div>
		<div id="scguide">SCROLL</div>
	</div>
</div>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/stylish_portfolio3/common_js" %>
<!-- page specific javascript -->
<!-- Instafeed js -->
</body>
</html>
