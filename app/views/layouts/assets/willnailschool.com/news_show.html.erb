<!doctype html>
<html lang="ja">
<head prefix="og: http:http://ogp.me/ns# fb: http:http://ogp.me/ns/fb# article: http:http://ogp.me/ns/article#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host.include?('swifty.jp') || request.host.include?('956.jp') %>
    <meta name="robots"                   content="noindex,nofollow">
<% end %>
<meta property="og:type"              content="article">
<% if false %>
  <meta property="og:url"               content="https://<%= request.host + url_for(:action=>'news_show', :id=>@seed) %>">
<% end %>
<meta property="og:title"             content="<%= model_title(@seed) %> - <%= @website.name %>">
<meta property="og:site_name"         content="<%= @website.name %>">
<% key_photo = key_photo(@seed) %>
<% unless key_photo.blank? %>
<meta property="og:image"             content="<%= key_photo.clip.url() %>">
<% end %>
<% unless @website.social_facebook_uri.blank? %>
<meta property="article:publisher"    content="<%= @website.social_facebook_uri %>">
<% end %>
<!-- Twitter card も入れる？ -->
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<% end %>
<script src="https://kit.fontawesome.com/7e454da5c1.js" crossorigin="anonymous"></script>
<%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/style" %>
</head>
<body id="body">
  <div id="main">
    <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/header" %>
    <aside id="pagegraphic">
      <img src="/images/assets/willnailschool.com/t_news_blog_header.jpg" alt="ページグラフィック">
    </aside>
    <aside id="breadcrumbs">
        <ol>
<% if true || request.host == 'sr2.swifty.jp' %>
            <li><a href="/home?wkey=<%= @website.wsite_hash_key %>">WILL Nail School</a></li>
<% else %>
            <li><a href="/home">WILL Nail School</a></li>
<% end %>
<% unless @seed.content_category.has_only_a_public_bag? %>
<%      if true || request.host == 'sr2.swifty.jp' %>
            <li><a href="<%= url_for(:action=>'news_index', :id=>@seed.content_category.my_bag_root_category.parent, :wkey=>@website.wsite_hash_key) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      else %>
            <li><a href="<%= url_for(:action=>'news_index', :id=>@seed.content_category.my_bag_root_category.parent) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      end %>
<% end %>
<% @seed.content_category.category_path(true).each do | category | %>
<%      if true || request.host == 'sr2.swifty.jp' %>
            <li><%= link_to category.category_label, :action=>"news_list", :id=>category, :wkey=>@website.wsite_hash_key %></li>
<%      else %>
            <li><%= link_to category.category_label, :action=>"news_list", :id=>category %></li>
<%      end %>
<% end %>
            <li class="active">
                <%= model_title(@seed) %>
            </li>
        </ol>
    </aside>
    <aside id="experience">
      <a href="https://form.willnailschool.com/index.html"><img src="/images/assets/willnailschool.com/trial_course.jpg" alt="体験コース"></a>
    </aside>
    <article id="article">
      <h1><%= model_title(@seed) %></h1>
      <p class="publish"><i class="fas fa-calendar-alt"></i> <%= publish_label(@seed) %></p>
      <div class="richText">
        <% unless @seed.description.blank? %><%= raw @seed.description %><% end %>
                    <% tag_cloud(@seed.tags.order(name: :asc), %w(css1 css2 css3 css4)) do |tag| %>
                        <% @seed.content_category.category_path(true).each do | category | %>
                        <% cat_url = url_for(:action=>'news_list', :id=>category, search_tags: [tag.name])%>
                            <a href='<%= cat_url %>'>
                                <span class='badge badge-primary '>
                                    #<%= tag3_icon %>&nbsp;<%= tag_name(tag) %>
                                </span>
                            </a>
                        <% end %>
                    <% end %>
      </div>
    </article>
    <%= leaf_navigation(@seed) %>
    <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/footinfo" %>
    <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/footer" %>
  </div><!-- #main -->
  <div id="goTop"><i class="fas fa-angle-up"></i></div>
  <div id="mNav">
    <div id="mNavClose">
      <i class="fas fa-times"></i>
    </div>
    <div class="scrollWrap">
      <ul class="scroller">
        <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/navigation" %>
        <li><a href="https://form.willnailschool.com/index.html" target="_blank">お問い合わせ</a></li>
      </ul>
    </div>
  </div>
  <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
  <%= render :partial=>"#{LayoutScheme.asset_root}/willnailschool.com/social_js" %>
</body>
</html>
