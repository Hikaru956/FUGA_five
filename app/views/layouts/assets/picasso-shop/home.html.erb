<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/picasso-shop/header" %>
<!-- グローバルナビゲーション -->
        <nav id="gnav">
            <div class="container">
                <ul id="gnav_main">
