<%  gmapcode = VisualWidget.search_widget_bag_for(@website, "3e79fb8e735298346314d4149a6bccae") %>
        <aside>
            <div class="container">
                <div class="content_box">
                    <div class="wrapper">
                        <div class="col-1p2">
<%  if !gmapcode.blank? && gmapcode.is_valid? %>
                            <div id="gmap">
                                <%= raw gmapcode.data_string %>
                            </div>
<%  else %>
                            <div id="gmap"></div>
                            <div class="text-right">
                                <a href="https://www.google.co.jp/maps/@<%= @website.lat %>,<%= @website.lng %>,16z?hl=ja" target="_blank">大きな地図で見る</a>
                            </div>
<%  end %>
                        </div>
                        <div class="col-1p2 contents">
                            <h1><%= model_name(@website) %></h1>
<% unless @website.wsite_description_business.blank? %>
                            <%=raw @website.wsite_description_business%>
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/pinky-hair.com/sns_btn" %>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
