<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= url_for_file_column(@favicon, :image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= url_for_file_column(@favicon, :image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= url_for_file_column(@webclip, :image) %>">
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/assets/bs-sae.com/style.css">
</head>
<body>
<!-- 主ウインドウ -->
<main id="container">
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/header" %>
<!-- グローバルナビゲーション -->
<nav id="gnav" class="clearfix">
    <ul id="gnav_main">
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/navigation" %>
    </ul>
</nav>
<article>
    <h1 class="page_h"><%= model_title(@seed) %></h1>
<% unless @website.google_calendar_emb_frame_code.blank? %>
    <aside id="gcal">
<%= raw @website.google_calendar_emb_frame_code %>
    </aside>
<% end %>
    <section id="streem_table">
        <ul class="wrapper">
<%
    @staffs.each do | staff | @staff = staff
        key_photo = key_photo(@staff)
        unless key_photo.blank?
            image_url = url_for_file_column(key_photo, :image, 'panel')
        else
            image_url = '//placehold.it/327x327&amp;text=No Photo'
        end
        if request.host == 'staffroom.swifty.jp'
            staff_url = url_for(:action=>'staff', :id=>@staff, :wkey=>@website.wsite_hash_key)
        else
            staff_url = url_for(:action=>'staff', :id=>@staff)
        end
%>
            <li class="col-1p3">
                <div class="imgbox"><div style="background-image:url('<%= image_url %>');">
                    <a href="<%= staff_url %>"><img src="<%= image_url %>"></a>
                </div></div>
                <h1>
                    <a href="<%= staff_url %>">
                        <%= model_name(@staff) %>
                        <span><%= h @staff.job_title %></span>
                    </a>
                </h1>
            </li>
<%  end %>
        </ul>
    </section>
</article>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/footer" %>
</main>
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav">
    <ul class="scrooler">
        <li>- MENU</li>
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/navigation" %>
    </ul>
</aside>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<!-- google maps javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/gmaps_js" %>
</body>
</html>
