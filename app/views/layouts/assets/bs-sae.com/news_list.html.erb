<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<% unless @seed.my_type_root_category.has_only_a_public_bag? %>
<title><%= model_title(@seed.my_type_root_category) %> <%= model_name(@seed) %> - <%= @website.name %></title>
<% else %>
<title><%= model_name(@seed) %> - <%= @website.name %></title>
<% end %>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/assets/bs-sae.com/style.css">
</head>
<body>
<!-- 主ウインドウ -->
<main id="container">
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/header" %>
<!-- グローバルナビゲーション -->
<nav id="gnav" class="clearfix">
    <ul id="gnav_main">
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/navigation" %>
    </ul>
</nav>
<article>
    <h1 class="page_h"><%= model_name(@seed) %></h1>
    <section id="contents_list">
        <ul>
<%
    sons = @seed.sons
    sons << @seed
    @leafs = @seed.public_leafs.where("content_leafs.content_category_id IN (?)",sons).order(position: :desc).paginate(:page => params[:page], :per_page=>PER_PAGE)
    #c = ContentLeaf.public_leafs_condition
    #c.and "content_leafs.content_category_id", 'IN', sons
    #@leafs = ContentLeaf.paginate(:page => params[:page], :per_page=>PER_PAGE, :conditions=>c.where, :order=>'position desc')
    @leafs.each do | leaf | @leaf = leaf
            key_photo = key_photo(leaf)
            unless key_photo.blank?
                image_url = key_photo.clip.url(:panel)
            else
                image_url = '//placehold.it/327x327&amp;text=No Photo'
            end
            if request.host == 'staffroom.swifty.jp'
                content_url = url_for(:action=>'news_show', :id=>@leaf, :page=>@page, :wkey=>@website.wsite_hash_key)
            else
                content_url = url_for(:action=>'news_show', :id=>@leaf, :page=>@page)
            end
%>
            <li class="wrapper">
                <div class="col-1p3">
                    <div class="imgbox"><div style="background-image:url('<%= image_url %>');">
                        <a href="<%= content_url %>"><img src="<%= image_url %>" alt=""></a>
                    </div></div>
                </div>
                <div class="col-2p3">
                    <h1><a href="<%= content_url %>"><%= h model_title(@leaf) %></a></h1>
                    <p class="publish"><i class="fa fa-calendar"></i> <%= publish_label(@leaf) %></p>
                    <div><%= h truncate(strip_tags(@leaf.description).gsub('&nbsp;', ' '), :length=>150) %></div>
                </div>
            </li>
<%  end %>
        </ul>
    </section>
    <aside class="pagination text-center">
<% if request.host == 'staffroom.swifty.jp' %>
            <%= will_paginate(@leafs, :params=> {:action=>'news_list', :id=>@seed, :page=>@page, :wkey=>@website.wsite_hash_key }, :renderer => BootstrapPagination::Rails, :previous_label=>'&#171;前', :next_label=>'次&#187;') %>
<% else %>
            <%= will_paginate(@leafs, :params=> {:action=>'news_list', :id=>@seed, :page=>@page }, :renderer => BootstrapPagination::Rails, :previous_label=>'&#171;前', :next_label=>'次&#187;') %>
<% end %>
    </aside>
</article>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/footer" %>
</main>
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav">
    <ul class="scrooler">
        <li>- MENU</li>
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/navigation" %>
    </ul>
</aside>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<!-- google maps javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bs-sae.com/gmaps_js" %>
</body>
</html>
