<% gn_logo = VisualWidget.search_widget_bag_for(@website, "fbda5b5183552f376897ad63552b51ac") %>
<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<% unless @seed.my_type_root_category.has_only_a_public_bag? %>
<title><%= model_title(@seed.my_type_root_category) %> <%= model_name(@seed) %> - <%= @website.name %></title>
<% else %>
<title><%= model_name(@seed) %> - <%= @website.name %></title>
<% end %>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host == 'staffroom.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<link rel="stylesheet" href="/stylesheets/assets/bond-of-mondo.com/style.css">
</head>
<body>
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bond-of-mondo.com/header" %>
<div class="container pageContents">
    <!-- <h1><%= model_name(@seed) %></h1> -->
    <article id="menu">
<%= render :partial=>"#{LayoutScheme.asset_root}/bond-of-mondo.com/portfolio_leafs", :locals=>{:seed=>@seed} %>
    </article>
</div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bond-of-mondo.com/footer" %>
<!-- グローバルナビゲーション -->
<div id="gNavWrap">
</div>
<nav id="gNav">
<% if !gn_logo.blank? && gn_logo.is_valid? %>
<!--
    <img src ="<%= gn_logo.photos[0].clip.url(:thumb) %>" alt="ロゴマーク">
-->
<% end %>
    <ul>
<%= render :partial=>"#{LayoutScheme.asset_root}/bond-of-mondo.com/navigation" %>
    </ul>
</nav>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/bond-of-mondo.com/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<!-- google maps javascript -->
</body>
</html>
