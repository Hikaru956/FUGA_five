<!-- スマホヘッダー -->
<aside id="mHeader">
    <div id="mnav_open_btn">
        <i class="fa fa-bars"></i><span>MENU</span>
    </div>
    <div id="mLogomark">
<% logo_img = VisualWidget.search_widget_bag_for(@website, "81d554684e7a2bab1ec4b2dd040f1e4f") %>
<% if logo_img.blank? || !logo_img.is_valid? %>
        <img src="/images/assets/salud-hair.jp/logomark234.png" alt="Logomark">
<% else %>
        <img src="<%= url_for_file_column(logo_img.photos[0], :image) %>" alt="Logomark">
<% end %>
    </div>
    <div id="mIcon">
<% unless @website.wsite_telephone.blank? %>
        <a href="tel:<%= @website.wsite_telephone %>"><i class="fa fa-phone-square"></i></a>
<% end %>
<% unless @website.social_facebook_uri.blank? %>
        <a href="<%= @website.social_facebook_uri %>" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i></a>
<% end %>
<% unless @website.social_instagram_uri.blank? %>
        <a href="<%= @website.social_instagram_uri %>" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
<% end %>
<% unless @website.social_line_uri.blank? %>
        <a href="<%= @website.social_line_uri %>" target="_blank"><i class="icon-line" aria-hidden="true"></i></a>
<% end %>
    </div>
</aside>
<!-- スマホナビ -->
<aside id="mNav">
    <div id="mNav_header">
        <div id="mNav_brand">
<% if logo_img.blank? || !logo_img.is_valid? %>
            <img src="/images/assets/salud-hair.jp/logomark234.png" alt="Logomark">
<% else %>
            <img src="<%= url_for_file_column(logo_img.photos[0], :image) %>" alt="Logomark">
<% end %>
        </div>
        <div id="mNav_close">
            <i class="fa fa-times"></i>
        </div>
    </div>
    <div class="scroolWrapper">
        <ul class="scrooler">
<%= render :partial=>"#{LayoutScheme.asset_root}/salud-hair.jp/navigation" %>
        </ul>
    </div>
</aside>
