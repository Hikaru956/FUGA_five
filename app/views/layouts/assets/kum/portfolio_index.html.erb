<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host == 'staffroom.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% unless @website.custom_metas.blank? %>
<%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%= auto_discovery_link_tag :rss, "/stream_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/css" %>
</head>
<body id="news">
<main id="main">
	<div class="container">
        <h1><%= model_title(@seed) %></h1>
		<ul id="news-list" class="wrapper">
<%
    @public_bag =  @seed.public_bags
    unless @public_bag.blank?
        @public_bag.each do | bag |
            unless bag.blank?
                key_photo = bag.photos.first
                unless key_photo.blank?
                    image_url = key_photo.clip.url(:panel)
                else
                    image_url = '//placehold.jp/327x327.png?text=No Photo'
                end
                if request.host == 'staffroom.swifty.jp'
                    page_url = url_for(:action=>'portfolio_list', :id=>bag, :wkey=>@website.wsite_hash_key)
                else
                    page_url = url_for(:action=>'portfolio_list', :id=>bag)
                end
%>
			<li class="m2p4">
				<div class="imgbox169"><div>
					<a href="<%= page_url %>">
						<img src="<%= image_url %>" alt="<%= truncate(model_name(bag)) %>">
					</a>
				</div></div>
				<h2>
					<a href="<%= page_url %>">
						<%= truncate(model_name(bag)) %>
					</a>
				</h2>
			</li>
<%          end %>
<%      end %>
<%  end %>
        </ul>
    </div>
</main>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/inquiry" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/footer" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/header" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/js" %>
</body>
</html>
