<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">

<% if request.host.include?('swifty.jp') || request.host.include?('956.jp') %>
    <meta name="robots"                   content="noindex,nofollow">
<% end %>

<% unless @website.custom_metas.blank? %>
<%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%= auto_discovery_link_tag :rss, "/stream_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/css" %>
</head>
<body id="news">
<main id="main">
<h1>
	<div class="container">
		<span class="icon icon-chevron-right"></span>
		<span class="icon icon-zedo-news"></span>
	</div>
</h1>
<article id="newsstream">
	<div class="container">
		<div class="text-center">
			<span class="icon icon-auto-newstopic"></span>
			<h2>最新情報</h2>
		</div>
		<div class="container2">
			<ul id="newsmenu" class="wrapper">
				<li class="m2p3">
					<a href="/news?id=4321">
						MANAGEMENT
					</a>
				</li>
				<li class="m2p3">
					<a href="/news?id=4326">
						OPEN CONSULTATION
					</a>
				</li>
				<li class="m2p3">
					<a href="/news?id=43278">
						SALES PROMOTION
					</a>
				</li>
				<li class="m2p3">
					<a href="/news?id=4328">
						MERCHANDISING
					</a>
				</li>
				<li class="m2p3">
					<a href="/news?id=4329">
						EDUCATION
					</a>
				</li>
				<li class="m2p3">
					<a href="/news?id=4330">
						DIGITAL MEDIA
					</a>
				</li>
			</ul>
		</div>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/news_index" %>
	</div>
</article>
</main>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/inquiry" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/footer" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/header" %>
<%= render :partial=>"#{LayoutScheme.asset_root}/kum/js" %>
</body>
</html>
