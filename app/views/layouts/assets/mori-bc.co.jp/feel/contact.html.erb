<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host == 'sr2.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/mori-bc.co.jp/shop/css" %>
</head>
<body>
<div id="body" class="scroolwrap">
    <div class="scrooler">
        <div id="main" class="container" role="main">
                    <h1 class="en"><%= model_title(@seed) %> <span>スタッフ紹介</span></h1>
                    <section id="streem_table">
                        <ul class="wrapper">
<%
    @staffs.each do | staff | @staff = staff
        key_photo = key_photo(@staff)
        unless key_photo.blank?
            image_url = key_photo.clip.url(:thumb)
        else
            image_url = '//placehold.jp/327x327.jpg?text=No Photo'
        end
        if request.host == 'sr2.swifty.jp'
            staff_url = url_for(:action=>'staff', :id=>@staff, :wkey=>@website.wsite_hash_key)
        else
            staff_url = url_for(:action=>'staff', :id=>@staff)
        end
%>
                            <li class="col-1p6">
                                <div class="col-in">
                                    <div class="imgbox"><div style="background-image:url('<%= image_url %>');">
                                        <a href="<%= staff_url %>"><img src="<%= image_url %>"></a>
                                    </div></div>
                                    <h2>
                                        <a href="<%= staff_url %>">
                                            <%= model_name(@staff) %>
<!--
                                            <span><%= h @staff.job_title %></span>
-->
                                        </a>
                                    </h2>
                                </div>
                            </li>
<%  end %>
                        </ul>
                    </section>
        </div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mori-bc.co.jp/shop/footer" %>
    </div>
</div>
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mori-bc.co.jp/shop/header" %>
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav" class="scroolwrap">
    <div class="scrooler">
<% logomark = VisualWidget.search_widget_bag_for(@website, "62aa95cab0dd63e669fa466996f2b97b") %>
<% if !logomark.blank? && logomark.is_valid? %>
        <div id="tnav_logo">
            <img src="//<%= request.host %><%= url_for_file_column(logomark.photos[0], :image) %>" alt="logomark">
        </div>
<% end %>
        <ul>
<%= render :partial=>"#{LayoutScheme.asset_root}/mori-bc.co.jp/shop/navigation" %>
            <li>
<%      if request.host == 'sr2.swifty.jp' %>
                <a href="/home?wkey=08ebd0bbcad881d718362fef54ee81e8">MORI<span> BEAUTY CORPORATION</span></a>
<%      else %>
                <a href="http://www.mori-bc.co.jp/">MORI<span> BEAUTY CORPORATION</span></a>
<%      end %>
            </li>
        </ul>
    </div>
</aside>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/mori-bc.co.jp/shop/common_js" %>
<!-- page specific javascript -->
<!-- social net javascript -->
<!-- google maps javascript -->
</body>
</html>
