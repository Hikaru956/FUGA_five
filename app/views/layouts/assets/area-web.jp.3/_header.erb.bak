<header id="header">
    <div class="container">
        <div id="header_img">
<% logomark = VisualWidget.search_widget_bag_for(@website, "b11f9ea223e31f26d5d98ed2e8437da1") %>
<% if logomark.blank? || !logomark.is_valid? %>
    <% if request.host == 'staffroom.swifty.jp' %>
            <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="//placehold.it/240x120" alt="logo mark"></a>
    <% else %>
            <a href="/home" id="brand"><img src="//placehold.it/240x120" alt="logo mark"></a>
    <% end %>
<% else %>
    <% if request.host == 'staffroom.swifty.jp' %>
            <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="<%= logomark.photos[0].clip.url(:image) %>" alt="logo mark"></a>
    <% else %>
            <a href="/home" id="brand"><img src="<%= logomark.photos[0].clip.url(:image) %>" alt="logo mark"></a>
    <% end %>
<% end %>
        </div>
        <div id="tnav_open">
            <a id="tnav_open_btn"><i class="fa fa-bars"></i><span>MENU</span></a>
        </div>
    </div>
</header>
