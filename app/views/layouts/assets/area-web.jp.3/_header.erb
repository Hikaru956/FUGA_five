            <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="//placehold.it/240x120" alt="logo mark"></a>
    <% else %>
            <a href="/home" id="brand"><img src="//placehold.it/240x120" alt="logo mark"></a>
    <% end %>
<% else %>
    <% if request.host == 'staffroom.swifty.jp' %>
            <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="<%= url_for_file_column(logomark.photos[0], :image) %>" alt="logo mark"></a>
    <% else %>
            <a href="/home" id="brand"><img src="<%= url_for_file_column(logomark.photos[0], :image) %>" alt="logo mark"></a>
    <% end %>
<% end %>
