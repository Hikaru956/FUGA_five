<% logomark = VisualWidget.search_widget_bag_for(@website, "fa81aa26bd9f2b901b372cc5aab1222c") %>
        <header id="header" class="clearfix">
            <div class="container">
                <div id="header_img">
<% if logomark.blank? || !logomark.is_valid? %>
    <% if request.host == 'sr2.swifty.jp' %>
                    <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="//placehold.jp/240x120.jpg" alt="logo mark"></a>
    <% else %>
                    <a href="/home" id="brand"><img src="//placehold.jp/240x120.jpg" alt="logo mark"></a>
    <% end %>
<% else %>
    <% if request.host == 'sr2.swifty.jp' %>
                    <a href="/home?wkey=<%= @website.wsite_hash_key %>" id="brand"><img src="<%= url_for_file_column(logomark.photos[0], :image) %>" alt="logo mark"></a>
    <% else %>
                    <a href="/home" id="brand"><img src="<%= url_for_file_column(logomark.photos[0], :image) %>" alt="logo mark"></a>
    <% end %>
<% end %>
                    <a id="tnav_open_btn"><i class="fa fa-bars"></i><span>MENU</span></a>
                </div>
            </div>
        </header>
