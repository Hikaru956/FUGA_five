<!doctype html>
<% hptitle = VisualWidget.search_widget_bag_for(@website, "182c839f2b93d67c84f0b20d9893c73e") %>
<% fbappid = VisualWidget.search_widget_bag_for(@website, "a480b3b01b81d8ff0e4c138814a42ceb") %>
<% og_img  = VisualWidget.search_widget_bag_for(@website, "b7ff970ec7370553968102a778aa2d69") %>
<html lang="ja">
<head prefix="og: http:http://ogp.me/ns# fb: http:http://ogp.me/ns/fb# article: http:http://ogp.me/ns/article# website: http:http://ogp.me/ns/website#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<% if hptitle.blank? || !hptitle.is_valid? %>
<title><%= @website.name %></title>
<% else %>
<title><%= hptitle.data_string %></title>
<% end %>
<% unless @website.wsite_description_shop.blank? %>
<meta name="description"              content="<%= @website.wsite_description_shop %>">
<% end %>
<% unless @website.wsite_keywords.blank? %>
<meta name="keywords"                 content="<%= @website.wsite_keywords %>">
<% end %>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% if request.host == 'sr2.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<% end %>
<% if !fbappid.blank? && fbappid.is_valid? %>
<meta property="fb:app_id"            content="<%= fbappid.data_string %>">
<% end %>
<meta property="og:type"              content="website">
<% if request.host == 'sr2.swifty.jp' %>
<meta property="og:url"               content="https://<%= request.host %>/home?wkey=<%= @website.wsite_hash_key %>">
<% else %>
<meta property="og:url"               content="https://<%= request.host %>/home">
<% end %>
<% if hptitle.blank? || !hptitle.is_valid? %>
<meta property="og:title"             content="<%= @website.name %>">
<% else %>
<meta property="og:title"             content="<%= hptitle.data_string %>">
<% end %>
<% if !og_img.blank? && og_img.is_valid? %>
<meta property="og:image"             content="<%= og_img.photos[0].clip.url() %>">
<% end %>
<% unless @website.wsite_description_shop.blank? %>
<meta property="og:description"       content="<%= @website.wsite_description_shop %>">
<% end %>
<meta property="og:site_name"         content="<%= @website.name %>">
<% unless @website.custom_metas.blank? %>
<%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<% end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/css" %>
</head>
<body>
<!-- 主ウインドウ -->
<main id="body" class="scroolWrapper">
    <div class="scrooler">
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/header" %>
<!-- グローバルナビゲーション -->
        <nav id="gnav">
            <div class="container">
                <ul id="gnav_main">
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/navigation" %>
                </ul>
            </div>
        </nav>
<!-- パンくずリスト -->
<!-- カルーセル -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/corousel" %>
<!-- 最新のNews -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/news_list" %>
<!-- Style category list -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/gallery_stream_list" %>
<!-- 最新のBLOG -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/blog_list" %>
<!-- INSTAGRAM -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/instafeed" %>
<!-- 店舗説明文と地図 -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/shop_info" %>
<!-- Google calendar -->
<% unless @website.google_calendar_emb_frame_code.blank? %>
        <aside>
            <div class="container2">
                <div id="gcal">
<%= raw @website.google_calendar_emb_frame_code %>
                </div>
            </div>
        </aside>
<% end %>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/footer" %>
    </div>
</main>
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav" class="scroolWrapper">
    <ul class="scrooler">
        <li>- MENU</li>
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/navigation" %>
    </ul>
</aside>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/common_js" %>
<!-- page specific javascript -->
<script src="/javascripts/assets/milktea-hair.com/carousel.js"></script>
<!-- social net javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/social_js" %>
<!-- google maps javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/gmaps_js" %>
<!-- Instafeed js -->
<%= render :partial=>"#{LayoutScheme.asset_root}/milktea-hair.com/instafeed_js" %>
</body>
</html>
