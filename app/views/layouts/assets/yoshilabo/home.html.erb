<script>
$(function(){

    /* config */
    var delay    = 3000;
    var interval = 8000;
    var duration =  800;

    /* init */
    var position = 0;
    var ul       = $('#carousel_ul');
    var li       = $('#carousel_ul > li');
    var length   = li.length;
    li.first().clone().appendTo('#carousel_ul');

    /* event, width changed */
    var width;
    var resize = function(){
        width = $('#carousel_inner').width();
        ul.width(width * (length+1));
        $('#carousel_ul > li').width(width);
    }
    resize();

    var next = function(){
        var left = ++position * -width;
        ul.animate({'left': left}, duration, function(){
            if (position >= length){
                ul.css({'left': '0'});
                position = 0;
            }
        });
    }
    var prev = function(){
        var left;
        if (position <= 0){
            position = length;
            left = position * -width;
            ul.css({'left': left+'px'});
        }
        left = --position * -width;
        ul.animate({'left': left}, duration);
    }

    var intervalID, timerID;
    var start = function(){
        intervalID = setInterval(next, interval);
    }
    timerID = setTimeout(start, delay);

    $('#carousel_next').click(function(){
        ul.stop(true);
        clearTimeout(timerID);
        clearInterval(intervalID);
        next();
        timerID = setTimeout(start, delay);
    });
    $('#carousel_prev').click(function(){
        ul.stop(true);
        clearTimeout(timerID);
        clearInterval(intervalID);
        prev();
        timerID = setTimeout(start, delay);
    });

    var event_timer = false;
    $(window).resize(function(){
        if (event_timer !== false){
            clearTimeout(event_timer);
        }
        event_timer = setTimeout(function(){
            resize();
            ul.stop(true);
            clearTimeout(timerID);
            clearInterval(intervalID);
            next();
            timerID = setTimeout(start, delay);
        }, 200);
    });
});
</script>
