<!doctype html>
<html lang="ja">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<%
    contact_category = ContentCategory.type_root(@website, ContentCategory::TYPE_INFO)
    if request.host == 'staffroom.swifty.jp'
        staff_url = url_for(:action=>'staff', :id=>@seed, :wkey=>@website.wsite_hash_key)
    else
        staff_url = url_for(:action=>'staff', :id=>@seed)
    end
%>
<title><%= model_name(contact_category.web_page)+' '+model_name(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">
<% fbappid = VisualWidget.search_widget_bag_for(@website, "e8447a06a00471bbcf8425e9412d5b9b") %>
<% unless fbappid.blank? %>
<meta property="fb:app_id"            content="<%= fbappid.data_string %>">
<% end %>
<meta property="og:type"              content="article">
<meta property="og:url"               content="http://<%= request.host + staff_url %>">
<meta property="og:title"             content="<%= model_name(contact_category.web_page) + model_name(@seed) %> - <%= @website.name %>">
<meta property="og:site_name"         content="<%= @website.name %>">
<meta property="article:publisher"    content="<%= model_name(@website.company) %>">
<!-- Twitter card も入れる？ -->
<% unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<% end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<% unless @favicon.blank? %>
<link href="<%= @favicon.clip.url(:image) %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url(:image) %>" rel="shortcut icon" type="image/x-icon">
<% end %>
<% unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url(:image) %>">
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/assets/area-web.jp.2/style.css">
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/style" %>
</head>
<!-- このサイトはIE9未満では正しく表示されません。 -->
<!--[if lt IE 9]>
<body id="ie8">
<![endif]-->
<!--[if IE 9]>
<body id="ie9">
<![endif]-->
<!--[if (gt IE 10)|!(IE)]><!-->
<body>
<!--<![endif]-->
<!-- タッチデバイス用ナビゲーション -->
<aside id="tnav">
    <ul id="scrooler">
        <li>- MENU</li>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/navigation" %>
    </ul>
</aside>
<!-- 主ウインドウ -->
<div id="body">
    <div class="scrooler">
<!-- サイトヘッダー -->
<% if request.host == 'sanjo.area-web.jp' %>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/header_sanjo" %>
<% else %>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/header" %>
<% end %>
<!-- グローバルナビゲーション -->
        <nav id="gnav">
            <div class="container">
                <div>
                    <i id="gnav_prev" class="fa fa-chevron-circle-left"></i>
                    <div id="gnav_wrapper">
                        <ul>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/navigation" %>
                        </ul>
                    </div>
                    <i id="gnav_next" class="fa fa-chevron-circle-right"></i>
                </div>
            </div>
        </nav>
<!-- 三条店 -->
<% if request.host == 'sanjo.area-web.jp' %>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/header" %>
<% end %>
        <div>
            <div class="container">
                <div class="content_box">
<!-- パンくずリスト -->
                    <aside id="breadcrumbs">
                        <ol>
<% if request.host == 'staffroom.swifty.jp' %>
                            <li><a href="/home?wkey=<%= @website.wsite_hash_key %>"><i class="fa fa-home"></i></a></li>
                            <li><a href="<%= url_for(:action=>'contact', :id=>contact_category, :wkey=>@website.wsite_hash_key) %>"><%= model_name(contact_category.web_page) %></a></li>
<% else %>
                            <li><a href="/home"><i class="fa fa-home"></i></a></li>
                            <li><a href="<%= url_for(:action=>'contact', :id=>contact_category) %>"><%= model_name(contact_category.web_page) %></a></li>
<% end %>
                            <li><%= model_name(@seed) %></li>
                        </ol>
                    </aside>
                    <!-- <h1><%= model_name(contact_category.web_page) %></h1> -->
                    <article id="article" class="wrapper">
                        <div class="col-1p2">
                            <div id="gallery">
<%  @photos = @seed.photos %>
<%  unless @photos.blank? %>
                                <ul>
<!--
<%      @photos.each do | photo |  %>
                                    <li>
                                        <%= image_tag photo.clip.url(:image) %>
<%          unless photo.info.blank? %>
                                        <div class="caption"><%=h photo.info%></div>
<%          end %>
                                    </li>
<%      end %>
-->
<%      photo = @photos[0]  %>
                                    <li>
                                        <%= image_tag photo.clip.url(:image) %>
                                    </li>
                                </ul>
                                <div id="gallery_prev"><i class="fa fa-chevron-circle-left"></i></div>
                                <div id="gallery_next"><i class="fa fa-chevron-circle-right"></i></div>
<%  else %>
                                <ul>
                                    <li><img src="//placehold.it/319x478&amp;text=No Photo"></li>
                                </ul>
<%  end %>
                            </div>
                        </div>
                        <div class="col-1p2">
                            <header>
                                <h1><%= model_name(@seed) %> <span><%= h @seed.job_title %></span></h1>
                            </header>
<% unless @seed.description.blank? %>
                            <div id="contents">
                                <%= raw @seed.description %>
                            </div>
<% end %>
                            <footer>
                                <ul class="sns_links">
<% unless @seed.social_facebook_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_facebook_uri%>" target='_blank'><i class="fa fa-facebook-official"></i></a>
                                    </li>
<% end %>
<% unless @seed.social_twitter_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_twitter_uri %>" target='_blank'><i class="fa fa-twitter-square"></i></a>
                                    </li>
<% end %>
<% unless @seed.social_gplus_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_gplus_uri %>" target='_blank'><i class="fa fa-google-plus-square"></i></a>
                                    </li>
<% end %>
<% unless @seed.social_instagram_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_instagram_uri %>" target='_blank'><i class="fa fa-instagram"></i></a>
                                    </li>
<% end %>
<% unless @seed.social_line_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_line_uri %>" target='_blank'><img src="/images/assets/line_icon.png" alt="LINE" /></a>
                                    </li>
<% end %>
<% unless @seed.social_pinterest_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_pinterest_uri %>" target='_blank'><i class="fa fa-pinterest-square"></i></a>
                                    </li>
<% end %>
<% unless @seed.social_tumblr_uri.blank? %>
                                    <li>
                                        <a href="<%= @seed.social_tumblr_uri %>" target='_blank'><i class="fa fa-tumblr-square"></i></a>
                                    </li>
<% end %>
                                </ul>
                            </footer>
                        </div>
                    </article>
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/sns_btn" %>
                </div>
            </div>
        </div>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/footer" %>
    </div>
</div>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/common_js" %>
<!-- page specific javascript -->
<script src="/javascripts/assets/area-web.jp.2/gallery.js"></script>
<!-- social net javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/area-web.jp.2/social_js" %>
<!-- google maps javascript -->
</body>
</html>
