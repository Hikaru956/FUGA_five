<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= model_title(@seed) %> - <%= @website.name %></title>
    <%= render :partial=>"#{LayoutScheme.asset_root}/broletto/head_logic" %>

    <!-- Add custom CSS here -->
    <style>
		body {
            margin-top: 60px;
            color: #333;
            background: url(/images/assets/broletto/bg001.jpg) center top;
        }
		footer {margin-top: 60px;}
		#myTab {margin-bottom:30px;}
	</style>

  </head>

  <body>
	<br/>
	<%= render :partial=>"#{LayoutScheme.asset_root}/broletto/navigation" %>

    <div class="container">
		<div class="row">
		    <div class="col-lg-12">
		        <ol class="breadcrumb">
		            <li>
		                <a href="<%= url_for(:action=>'index', :wkey=>@website.wsite_hash_key) %>"><i class="icon-home"></i></a>
		            </li>
		            <li class="active">
		                <%= model_title(@seed) %>
		            </li>
		        </ol>
		    </div>
		</div>
		<div class="row">
		    <div class="box">
		        <div class="col-lg-12">
					<% unless @seed.description.blank? %><%= raw @seed.description %><% end %>
			    </div>
		    </div>
		</div>
		<div class="row">
		    <div class="box">
		        <div class="col-lg-12">
					<hr/>
					<%= render :partial=>'layouts/social_buttons'%>
			    </div>
		    </div>
		</div>
	</div>
    <div class="container">
	  <%= render :partial=>"#{LayoutScheme.asset_root}/broletto/footer" %>
    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript -->
    <!-- Placed at the end of the document so the pages load faster -->
	<script type='text/javascript' src='https://www.google.com/jsapi'></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1/jquery-ui.min.js"></script>
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js"></script>
	<script type="text/javascript" src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"></script>
  </body>
</html>