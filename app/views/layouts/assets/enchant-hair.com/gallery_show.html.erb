<!doctype html>
<html lang="ja">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible"    content="IE=edge">
<title><%= model_title(@seed) %> - <%= @website.name %></title>
<meta name="viewport"                 content="initial-scale=1">
<meta name="format-detection"         content="telephone=no">
<meta name="format-detection"         content="address=no">
<meta name="application-name"         content="swifty2">
<meta name="Targeted Geographic Area" content="Japan">
<meta name="generator"                content="fuga">
<meta name="author"                   content="<%= model_name(@website.company) %>">

<%  if true || request.host == 'sr2.swifty.jp' %>
<meta name="robots"                   content="noindex,nofollow">
<%  end %>

<meta property="og:type"              content="article">
<meta property="og:url"               content="//<%= request.host + url_for(:action=>'gallery_show', :id=>@seed) %>">
<meta property="og:title"             content="<%= model_title(@seed) %> - <%= @website.name %>">
<meta property="og:site_name"         content="<%= @website.name %>">
<%  unless @website.social_facebook_uri.blank? %>
<meta property="article:publisher"    content="<%= @website.social_facebook_uri %>">
<%  end %>
<%  unless @website.custom_metas.blank? %>
    <%= raw @website.custom_metas %>
<%  end %>
<%= auto_discovery_link_tag :rss, "/news_feed.rss", :title => @website.name %>
<%
    @favicon = @website.favicon
    @webclip = @website.apple_touch_icon
%>
<%  unless @favicon.blank? %>
<link href="<%= @favicon.clip.url() %>" rel="icon" type="image/vnd.microsoft.icon">
<link href="<%= @favicon.clip.url() %>" rel="shortcut icon" type="image/x-icon">
<%  end %>
<%  unless @webclip.blank? %>
<link rel="apple-touch-icon" href="<%= @webclip.clip.url() %>">
<%  end %>
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/style" %>
</head>
<body id="body">
<div id="container" class="clearfix">
    <main id="styleShow">
<!-- パンくずリスト -->
        <aside id="breadcrumbs">
            <ol>
<%  if true || request.host == 'sr2.swifty.jp' %>
                <li><a href="/home?wkey=<%= @website.wsite_hash_key %>"><i class="fas fa-home"></i></a></li>
<%  else %>
                <li><a href="/home"><i class="fas fa-home"></i></a></li>
<%  end %>
<%  unless @seed.content_category.has_only_a_public_bag? %>
<%      if true || request.host == 'sr2.swifty.jp' %>
                <li><a href="<%= url_for(:action=>'gallery_index', :id=>@seed.content_category.my_bag_root_category.parent, :wkey=>@website.wsite_hash_key) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      else %>
                <li><a href="<%= url_for(:action=>'gallery_index', :id=>@seed.content_category.my_bag_root_category.parent) %>"><%= model_title(@seed.content_category.my_bag_root_category.parent) %></a></li>
<%      end %>
<%  end %>
<%  @seed.content_category.category_path(true).each do | category | %>
<%      if true || request.host == 'sr2.swifty.jp' %>
                <li><%= link_to category.category_label, :action=>"gallery_list", :id=>category, :wkey=>@website.wsite_hash_key %></li>
<%      else %>
                <li><%= link_to category.category_label, :action=>"gallery_list", :id=>category %></li>
<%      end %>
<%  end %>
                <li><%= model_title(@seed) %></li>
            </ol>
        </aside>
<!-- 記事 -->
        <article id="article">
            <h1><%= model_title(@seed) %></h1>
<%  unless @seed.staff.blank? || @seed.staff.staff_status==Staff::STAFF_BLOCKED %>
            <p class="publish">
                <a href="<%= url_for(:action=>'staff', :id=>@seed.staff) %>"><i class="fas fa-user-edit"></i> <%= h model_name(@seed.staff) %></a>
            </p>
<%  end %>
<%  @photos = @seed.photos %>
<%  unless @photos.blank? %>
            <ul id="styles">
<%      @photos.each do | photo | %>
                <li>
                    <img src="<%= photo.clip.url(:panel) %>" alt="">
<%          unless photo.info.blank? %>
                    <div><%=h photo.info%></div>
<%          end %>
                </li>
<%      end %>
            </ul>
<%  end %>
<%  unless @seed.description.blank? %>
            <div class="contents">
                <%= raw @seed.description %>
                <% tag_cloud(@seed.tags.order(name: :asc), %w(css1 css2 css3 css4)) do |tag| %>
                    <% @seed.content_category.category_path(true).each do | category | %>
                    <% cat_url = url_for(:action=>'news_list', :id=>category, search_tags: [tag.name])%>
                        <a href='<%= cat_url %>'>
                            <span class='badge badge-primary '>
                                #<%= tag3_icon %>&nbsp;<%= tag_name(tag) %>
                            </span>
                        </a>
                    <% end %>
                <% end %>
            </div>
<%  end %>
        </article>
<!-- SNS BUTTON -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/sns_btn" %>
<!-- サイトフッター -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/footer" %>
    </main>
    <aside id="summary" style="background-image:url('/images/assets/enchant-hair.com/side/side003.jpg')">
        <div>
            <h1><div>スタイルギャラリー</div><%= model_title(@seed.content_category.my_bag_root_category.parent) %></h1>
            <p><%= model_title(@seed) %></p>
        </div>
    </aside>
</div>
<!-- サイトヘッダー -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/header" %>
<!-- ページトップボタン -->
<div id="goTop">
    <i class="fas fa-chevron-circle-up"></i>
</div>
<!-- タッチデバイス用ナビゲーション -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/mnav" %>
<!-- common javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/common_js" %>
<!-- page specific javascript -->
<%= render :partial=>"#{LayoutScheme.asset_root}/enchant-hair.com/social_js" %>
</body>
</html>
