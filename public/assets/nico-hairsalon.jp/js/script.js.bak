$(function()
{
    'use strict';
    /* navigation */
    new function() {

        const gnav = $('#gnav');
        const head = $('#header');

        $('#navopner').on('click',function() {
            if (gnav.hasClass('show')) {
                gnav.removeClass('show');
                head.removeClass('show');
            } else {
                gnav.addClass('show');
                head.addClass('show');
            }
        });
        $('#navcloser').on('click',function() {
            gnav.removeClass('show');
            head.removeClass('show');
        });

    }
});
